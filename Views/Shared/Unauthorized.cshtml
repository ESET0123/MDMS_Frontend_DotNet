@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Access Denied</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .error-container {
            text-align: center;
            background: white;
            padding: 3rem;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            max-width: 500px;
        }

        .error-icon {
            font-size: 5rem;
            color: #dc3545;
            margin-bottom: 1rem;
        }

        .btn-custom {
            padding: 0.75rem 2rem;
            font-size: 1.1rem;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <i class="bi bi-shield-x error-icon"></i>
        <h1 class="display-4 fw-bold mb-3">Access Denied</h1>
        <p class="lead text-muted mb-4">
            You don't have permission to access this page.
        </p>
        <p class="text-secondary mb-4">
            This page is restricted to authorized users only. Please contact your administrator if you believe this is an error.
        </p>
        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            <button onclick="goBack()" class="btn btn-secondary btn-custom">
                <i class="bi bi-arrow-left"></i> Go Back
            </button>
            <button onclick="handleLogout()" class="btn btn-primary btn-custom">
                <i class="bi bi-box-arrow-in-right"></i> Login Again
            </button>
        </div>
    </div>
    <script>
        function goBack() {
            // Try to get user type from cookie first, then localStorage
            function getCookie(name) {
                const value = `; ${document.cookie}`;
                const parts = value.split(`; ${name}=`);
                if (parts.length === 2) {
                    return parts.pop().split(';').shift();
                }
                return null;
            }

            const userType = getCookie('userType') || localStorage.getItem('userType');

            if (userType === 'admin') {
                window.location.href = '/Home/Dashboard';
            } else if (userType === 'consumer') {
                window.location.href = '/Consumer/Dashboard';
            } else {
                window.location.href = '/Auth/Login';
            }
        }

        function handleLogout() {
            // Clear localStorage
            localStorage.clear();

            // Clear cookies - THIS WAS MISSING!
            document.cookie = "jwtToken=; path=/; max-age=0; SameSite=Strict";
            document.cookie = "userType=; path=/; max-age=0; SameSite=Strict";

            // Redirect to login
            window.location.href = '/Auth/Login';
        }
    </script>
</body>
</html>