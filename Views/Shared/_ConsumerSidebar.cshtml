            <i class="bi bi-speedometer2"></i>
            <span class="ms-3">Dashboard</span>
        </a>
        <a href="@Url.Action("MyMeters", "Consumer")" class="nav-item d-flex align-items-center py-3 px-3 rounded text-decoration-none text-white-50 hover-link" data-page="MyMeters">
            <i class="bi bi-lightning-charge"></i>
            <span class="ms-3">My Meters</span>
        </a>
        <a href="@Url.Action("DailyMeterReading", "Consumer")" class="nav-item d-flex align-items-center py-3 px-3 rounded text-decoration-none text-white-50 hover-link" data-page="DailyMeterReading">
