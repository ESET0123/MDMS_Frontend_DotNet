@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Daily Meter Reading";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daily Meter Reading</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
            padding: 0;
        }

        .table input[type="time"],
        .table input[type="number"],
        .table select {
            font-size: 0.875rem;
        }

        .table td {
            vertical-align: middle;
        }

        .validation-error {
            border-color: #dc3545 !important;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-calendar-day"></i> Daily Meter Reading Entry</h2>
            <div>
                <button onclick="viewAllReadings()" class="btn btn-info me-2">
                    <i class="bi bi-list-ul"></i> View All Readings
                </button>
                <button onclick="viewMonthlyBills()" class="btn btn-success">
                    <i class="bi bi-file-earmark-text"></i> Monthly Bills
                </button>
            </div>
        </div>

        <div id="errorMessage" class="alert alert-danger alert-dismissible fade show" style="display: none;">
            <button type="button" class="btn-close" onclick="hideError()"></button>
            <span id="errorText"></span>
        </div>

        <div id="successMessage" class="alert alert-success alert-dismissible fade show" style="display: none;">
            <button type="button" class="btn-close" onclick="hideSuccess()"></button>
            <span id="successText"></span>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Reading Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="meterId" class="form-label">Select Meter <span class="text-danger">*</span></label>
                        <select class="form-select" id="meterId" onchange="loadMeterInfo()">
                            <option value="">-- Select Meter --</option>
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="readingDate" class="form-label">Reading Date <span class="text-danger">*</span></label>
                        <input type="date" class="form-control" id="readingDate" value="">
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="baseRate" class="form-label">Base Rate (₹/kWh) <span class="text-danger">*</span></label>
                        <input type="number" step="0.0001" class="form-control" id="baseRate" placeholder="0.0000" readonly>
                    </div>
                </div>
                <div id="meterInfoDisplay" class="alert alert-info" style="display: none;">
                    <strong>Meter Info:</strong> <span id="meterDetails"></span>
                </div>
            </div>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>TOD Readings</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th style="width: 20%;">TOD Rule</th>
                                <th style="width: 12%;">Start Time</th>
                                <th style="width: 12%;">End Time</th>
                                <th style="width: 15%;">Previous Reading</th>
                                <th style="width: 15%;">Current Reading</th>
                                <th style="width: 13%;">Consumption</th>
                                <th style="width: 13%;">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="readingsTableBody">
                            <tr>
                                <td colspan="7" class="text-center text-muted">Select a meter to load TOD slots</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-calculator me-2"></i>Summary</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Total Consumption:</label>
                        <div class="h4 text-success" id="totalConsumption">0.00 kWh</div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Base Amount:</label>
                        <div class="h4 text-secondary" id="baseAmount">₹0.00</div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Surge/Discount:</label>
                        <div class="h4 text-warning" id="adjustmentAmount">₹0.00</div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Total Amount:</label>
                        <div class="h4 text-success" id="totalAmount">₹0.00</div>
                    </div>
                </div>
                <hr>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button class="btn btn-secondary" onclick="clearForm()">
                        <i class="bi bi-x-circle"></i> Clear
                    </button>
                    <button class="btn btn-success" onclick="saveReadings()">
                        <i class="bi bi-save"></i> Save Readings
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="viewReadingsModal" tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title"><i class="bi bi-list-ul me-2"></i>Daily Meter Readings</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="form-label">Filter by Meter:</label>
                            <select class="form-select" id="filterMeterId" onchange="loadAllReadings()">
                                <option value="">All Meters</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Start Date:</label>
                            <input type="date" class="form-control" id="filterStartDate" onchange="loadAllReadings()">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">End Date:</label>
                            <input type="date" class="form-control" id="filterEndDate" onchange="loadAllReadings()">
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button class="btn btn-outline-secondary w-100" onclick="clearFilters()">
                                <i class="bi bi-x-circle"></i> Clear
                            </button>
                        </div>
                    </div>
                    <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                        <table class="table table-bordered table-hover table-sm">
                            <thead class="table-dark sticky-top">
                                <tr>
                                    <th>Date</th>
                                    <th>Meter</th>
                                    <th>TOD Rule</th>
                                    <th>Time Slot</th>
                                    <th>Previous</th>
                                    <th>Current</th>
                                    <th>Consumption</th>
                                    <th>Amount</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="allReadingsTableBody">
                                <tr>
                                    <td colspan="9" class="text-center text-muted">Select filters to view readings</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const DAILY_READING_API_URL = `${API_BASE_URL}/DailyMeterReading`;
        const TOD_RULE_API_URL = `${API_BASE_URL}/TodRule`;
        const METER_API_URL = `${API_BASE_URL}/Meter`;

        let allTodRules = [];
        let allMeters = [];
        let readingRowCounter = 0;
        let currentMeterLatestReading = 0;
        let currentMeterApplicableRules = [];

        function showError(message) {
            document.getElementById('errorText').textContent = message;
            document.getElementById('errorMessage').style.display = 'block';
        }

        function hideError() {
            document.getElementById('errorMessage').style.display = 'none';
        }

        function showSuccess(message) {
            document.getElementById('successText').textContent = message;
            document.getElementById('successMessage').style.display = 'block';
            setTimeout(hideSuccess, 5000);
        }

        function hideSuccess() {
            document.getElementById('successMessage').style.display = 'none';
        }

        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('readingDate').valueAsDate = new Date();

            document.getElementById('readingDate').addEventListener('change', function() {
                if (document.getElementById('meterId').value) {
                    checkExistingReadingsForDate();
                }
            });

            fetchAllData();
        });

        async function fetchAllData() {
            try {
                await fetchMeters();
                await fetchTodRules();
            } catch (error) {
                showError('Failed to load initial data. Please refresh the page.');
            }
        }

        async function fetchMeters() {
            try {
                const response = await fetch(`${METER_API_URL}/AllMeters`);
                if (!response.ok) throw new Error('Failed to load meters');
                allMeters = await response.json();
                populateMeterDropdown();
            } catch (error) {
                throw error;
            }
        }

        function populateMeterDropdown() {
            const select = document.getElementById('meterId');
            const filterSelect = document.getElementById('filterMeterId');

            select.innerHTML = '<option value="">-- Select Meter --</option>';
            filterSelect.innerHTML = '<option value="">All Meters</option>';

            allMeters.forEach((meter) => {
                const baseRate = meter.baseRate || meter.tariff?.baseRate || 0;
                const consumerName = meter.consumerName || meter.consumer?.name || 'Unknown';
                const latestReading = meter.latestReading || 0;
                const meterId = meter.meterId;
                const tariffId = meter.tariffId || meter.tariff?.tariffId;

                const option = `<option value="${meterId}"
                    data-meter-number="${meterId}"
                    data-base-rate="${baseRate}"
                    data-latest-reading="${latestReading}"
                    data-consumer-name="${consumerName}"
                    data-tariff-id="${tariffId}">
                    Meter #${meterId} - ${consumerName}
                </option>`;

                select.innerHTML += option;
                filterSelect.innerHTML += `<option value="${meterId}">Meter #${meterId} - ${consumerName}</option>`;
            });
        }

        async function fetchTodRules() {
            try {
                const response = await fetch(`${TOD_RULE_API_URL}/AllRules`);
                if (!response.ok) throw new Error('Failed to load TOD rules');
                const rules = await response.json();
                allTodRules = rules.filter(r => r.isActive);
            } catch (error) {
                throw error;
            }
        }

        function loadMeterInfo() {
            const select = document.getElementById('meterId');
            const selectedOption = select.options[select.selectedIndex];

            if (select.value) {
                const meterId = selectedOption.dataset.meterNumber;
                const baseRate = parseFloat(selectedOption.dataset.baseRate) || 0;
                const consumerName = selectedOption.dataset.consumerName || 'Unknown';
                const tariffId = selectedOption.dataset.tariffId;
                currentMeterLatestReading = parseFloat(selectedOption.dataset.latestReading) || 0;

                if (baseRate === 0) {
                    showError('WARNING: Base rate is 0 for this meter. Please check tariff configuration.');
                }

                document.getElementById('baseRate').value = baseRate.toFixed(4);
                document.getElementById('meterDetails').textContent =
                    `Meter: #${meterId} | Consumer: ${consumerName} | Base Rate: ₹${baseRate.toFixed(4)}/kWh | Latest Reading: ${currentMeterLatestReading.toFixed(2)} kWh`;
                document.getElementById('meterInfoDisplay').style.display = 'block';

                // Filter TOD rules applicable to this meter's tariff
                currentMeterApplicableRules = allTodRules.filter(rule => rule.tariffId == tariffId);

                if (currentMeterApplicableRules.length === 0) {
                    showError('No TOD rules found for this meter\'s tariff. Please check tariff configuration.');
                }

                checkExistingReadingsForDate();
            } else {
                document.getElementById('baseRate').value = '';
                document.getElementById('meterInfoDisplay').style.display = 'none';
                currentMeterLatestReading = 0;
                currentMeterApplicableRules = [];

                const tbody = document.getElementById('readingsTableBody');
                tbody.innerHTML = '<tr><td colspan="7" class="text-center text-muted">Select a meter to load TOD slots</td></tr>';
            }
        }

        async function checkExistingReadingsForDate() {
            const meterId = document.getElementById('meterId').value;
            const readingDate = document.getElementById('readingDate').value;

            if (!meterId || !readingDate) return;

            const existingReadings = await getExistingReadings(meterId, readingDate);

            if (existingReadings.length > 0) {
                showError(`⚠️ Readings already exist for this meter on ${readingDate}. Loading existing data.`);
                loadExistingReadings(existingReadings);
            } else {
                hideError();
                loadApplicableTodSlots();
            }
        }

        async function getExistingReadings(meterId, readingDate) {
            try {
                const startDate = readingDate;
                const endDate = readingDate;
                const response = await fetch(
                    `${DAILY_READING_API_URL}/ByDateRange?meterId=${meterId}&startDate=${startDate}&endDate=${endDate}`
                );

                if (response.ok) {
                    return await response.json();
                }
                return [];
            } catch (error) {
                console.error('Error checking existing readings:', error);
                return [];
            }
        }

        function loadExistingReadings(existingReadings) {
            const tbody = document.getElementById('readingsTableBody');
            tbody.innerHTML = '';

            if (existingReadings.length === 0) {
                loadApplicableTodSlots();
                return;
            }

            // Group readings by TOD rule for easier processing
            const readingsByTodRule = {};
            existingReadings.forEach(reading => {
                readingsByTodRule[reading.todRuleId] = reading;
            });

            currentMeterApplicableRules.forEach((rule, index) => {
                readingRowCounter++;
                const rowId = `row_${readingRowCounter}`;

                const existingReading = readingsByTodRule[rule.todRuleId];

                let previousReadingValue = '';
                let currentReadingValue = '';

                if (existingReading) {
                    previousReadingValue = existingReading.previousReading.toFixed(2);
                    currentReadingValue = existingReading.currentReading.toFixed(2);
                } else if (index === 0) {
                    previousReadingValue = currentMeterLatestReading.toFixed(2);
                }

                const row = `
                    <tr id="${rowId}">
                        <td>
                            <select class="form-select form-select-sm tod-rule-select" onchange="updateTimeSlot('${rowId}')">
                                <option value="${rule.todRuleId}" selected
                                    data-start="${rule.startTime}"
                                    data-end="${rule.endTime}"
                                    data-surge="${rule.surgeChargePercent}"
                                    data-discount="${rule.discountPercent}">
                                    ${rule.ruleName} (${rule.startTime}-${rule.endTime})
                                </option>
                            </select>
                        </td>
                        <td><input type="time" class="form-control form-control-sm start-time" value="${rule.startTime}" required></td>
                        <td><input type="time" class="form-control form-control-sm end-time" value="${rule.endTime}" required></td>
                        <td><input type="number" step="0.01" class="form-control form-control-sm previous-reading"
                            placeholder="0.00" value="${previousReadingValue}" onchange="calculateConsumption('${rowId}')" required></td>
                        <td><input type="number" step="0.01" class="form-control form-control-sm current-reading"
                            placeholder="0.00" value="${currentReadingValue}" onchange="calculateConsumption('${rowId}')" required></td>
                        <td><input type="number" step="0.01" class="form-control form-control-sm consumption" readonly
                            value="${existingReading ? existingReading.consumptionKwh.toFixed(2) : ''}"></td>
                        <td class="text-center">
                            <button class="btn btn-sm btn-danger" onclick="removeReadingRow('${rowId}')">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;

                tbody.insertAdjacentHTML('beforeend', row);
            });

            calculateTotals();
        }

        function loadApplicableTodSlots() {
            const tbody = document.getElementById('readingsTableBody');
            tbody.innerHTML = '';

            if (currentMeterApplicableRules.length === 0) {
                tbody.innerHTML = '<tr><td colspan="7" class="text-center text-muted">No TOD rules configured for this meter\'s tariff</td></tr>';
                return;
            }

            currentMeterApplicableRules.forEach((rule, index) => {
                readingRowCounter++;
                const rowId = `row_${readingRowCounter}`;
                const previousReadingValue = index === 0 ? currentMeterLatestReading.toFixed(2) : '';

                const row = `
                    <tr id="${rowId}">
                        <td>
                            <select class="form-select form-select-sm tod-rule-select" onchange="updateTimeSlot('${rowId}')">
                                <option value="${rule.todRuleId}" selected
                                    data-start="${rule.startTime}"
                                    data-end="${rule.endTime}"
                                    data-surge="${rule.surgeChargePercent}"
                                    data-discount="${rule.discountPercent}">
                                    ${rule.ruleName} (${rule.startTime}-${rule.endTime})
                                </option>
                            </select>
                        </td>
                        <td><input type="time" class="form-control form-control-sm start-time" value="${rule.startTime}" required></td>
                        <td><input type="time" class="form-control form-control-sm end-time" value="${rule.endTime}" required></td>
                        <td><input type="number" step="0.01" class="form-control form-control-sm previous-reading"
                            placeholder="0.00" value="${previousReadingValue}" onchange="calculateConsumption('${rowId}')" required></td>
                        <td><input type="number" step="0.01" class="form-control form-control-sm current-reading"
                            placeholder="0.00" onchange="calculateConsumption('${rowId}')" required></td>
                        <td><input type="number" step="0.01" class="form-control form-control-sm consumption" readonly></td>
                        <td class="text-center">
                            <button class="btn btn-sm btn-danger" onclick="removeReadingRow('${rowId}')">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;

                tbody.insertAdjacentHTML('beforeend', row);
            });
        }

        function updateTimeSlot(rowId) {
            const row = document.getElementById(rowId);
            const select = row.querySelector('.tod-rule-select');
            const selectedOption = select.options[select.selectedIndex];

            if (select.value) {
                row.querySelector('.start-time').value = selectedOption.dataset.start;
                row.querySelector('.end-time').value = selectedOption.dataset.end;
            }
        }

        function calculateConsumption(rowId) {
            const row = document.getElementById(rowId);
            const previous = parseFloat(row.querySelector('.previous-reading').value) || 0;
            const current = parseFloat(row.querySelector('.current-reading').value) || 0;
            const consumption = current - previous;

            if (consumption < 0) {
                row.querySelector('.current-reading').classList.add('validation-error');
                row.querySelector('.consumption').value = '0.00';
            } else {
                row.querySelector('.current-reading').classList.remove('validation-error');
                row.querySelector('.consumption').value = consumption.toFixed(2);

                updateNextRowPreviousReading(rowId, current);
            }

            calculateTotals();
        }

        function updateNextRowPreviousReading(currentRowId, currentReading) {
            const currentRow = document.getElementById(currentRowId);
            const nextRow = currentRow.nextElementSibling;

            if (nextRow && nextRow.id.startsWith('row_')) {
                const nextPreviousInput = nextRow.querySelector('.previous-reading');
                if (nextPreviousInput) {
                    nextPreviousInput.value = currentReading.toFixed(2);
                }
            }
        }

        function calculateTotals() {
            const tbody = document.getElementById('readingsTableBody');
            const rows = tbody.querySelectorAll('tr');

            let totalConsumption = 0;
            let baseAmount = 0;
            let adjustmentAmount = 0;

            const baseRate = parseFloat(document.getElementById('baseRate').value) || 0;

            rows.forEach(row => {
                const consumption = parseFloat(row.querySelector('.consumption')?.value) || 0;
                const todRuleSelect = row.querySelector('.tod-rule-select');
                const selectedOption = todRuleSelect?.options[todRuleSelect.selectedIndex];

                if (consumption > 0 && selectedOption) {
                    const surge = parseFloat(selectedOption.dataset.surge) || 0;
                    const discount = parseFloat(selectedOption.dataset.discount) || 0;

                    totalConsumption += consumption;
                    const rowBaseAmount = consumption * baseRate;
                    baseAmount += rowBaseAmount;

                    const surgeAmount = rowBaseAmount * (surge / 100);
                    const discountAmount = rowBaseAmount * (discount / 100);
                    adjustmentAmount += (surgeAmount - discountAmount);
                }
            });

            const totalAmount = baseAmount + adjustmentAmount;

            document.getElementById('totalConsumption').textContent = totalConsumption.toFixed(2) + ' kWh';
            document.getElementById('baseAmount').textContent = '₹' + baseAmount.toFixed(2);
            document.getElementById('adjustmentAmount').textContent = (adjustmentAmount >= 0 ? '+' : '') + '₹' + adjustmentAmount.toFixed(2);
            document.getElementById('totalAmount').textContent = '₹' + totalAmount.toFixed(2);
        }

        function removeReadingRow(rowId) {
            document.getElementById(rowId).remove();
            calculateTotals();

            const tbody = document.getElementById('readingsTableBody');
            if (tbody.rows.length === 0) {
                tbody.innerHTML = '<tr><td colspan="7" class="text-center text-muted">Select a meter to load TOD slots</td></tr>';
            }
        }

        async function saveReadings() {
            const meterId = document.getElementById('meterId').value;
            const readingDate = document.getElementById('readingDate').value;
            const baseRate = parseFloat(document.getElementById('baseRate').value);

            if (!meterId || !readingDate || !baseRate) {
                showError('Please fill in meter, date, and ensure base rate is set');
                return;
            }

            const hasDuplicate = await checkForDuplicateReadings(meterId, readingDate);
            if (hasDuplicate) {
                if (!confirm('Readings already exist for this meter on this date. Do you want to delete existing readings and create new ones?')) {
                    return;
                }
                await deleteExistingReadings(meterId, readingDate);
            }

            const tbody = document.getElementById('readingsTableBody');
            const rows = tbody.querySelectorAll('tr');

            if (rows.length === 0 || rows[0].cells[0]?.colSpan === 7) {
                showError('Please add at least one reading');
                return;
            }

            const readings = [];

            for (const row of rows) {
                const todRuleId = parseInt(row.querySelector('.tod-rule-select').value);
                const startTime = row.querySelector('.start-time').value;
                const endTime = row.querySelector('.end-time').value;
                const previousReading = parseFloat(row.querySelector('.previous-reading').value);
                const currentReading = parseFloat(row.querySelector('.current-reading').value);

                if (!todRuleId || !startTime || !endTime || isNaN(previousReading) || isNaN(currentReading)) {
                    showError('Please fill in all fields for each reading row');
                    return;
                }

                if (currentReading < previousReading) {
                    showError('Current reading cannot be less than previous reading');
                    return;
                }

                readings.push({
                    todRuleId: todRuleId,
                    startTime: startTime,
                    endTime: endTime,
                    previousReading: previousReading,
                    currentReading: currentReading,
                    baseRate: baseRate
                });
            }

            const bulkData = {
                meterId: parseInt(meterId),
                readingDate: readingDate,
                recordedBy: 'Admin',
                readings: readings
            };

            try {
                const response = await fetch(`${DAILY_READING_API_URL}/CreateBulk`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(bulkData),
                });

                const result = await response.json();

                if (response.ok) {
                    showSuccess(`Success! ${result.count} reading(s) saved.\nTotal: ₹${result.totalAmount.toFixed(2)}`);
                    clearForm();
                    await fetchMeters();
                } else {
                    if (result.errors) {
                        showError('Errors: ' + result.errors.join(', '));
                    } else {
                        showError(`Failed: ${result.error || JSON.stringify(result)}`);
                    }
                }
            } catch (error) {
                showError('Network error: ' + error.message);
            }
        }

        async function checkForDuplicateReadings(meterId, readingDate) {
            try {
                const startDate = readingDate;
                const endDate = readingDate;
                const response = await fetch(
                    `${DAILY_READING_API_URL}/ByDateRange?meterId=${meterId}&startDate=${startDate}&endDate=${endDate}`
                );

                if (response.ok) {
                    const readings = await response.json();
                    return readings.length > 0;
                }
                return false;
            } catch (error) {
                console.error('Error checking duplicates:', error);
                return false;
            }
        }

        async function deleteExistingReadings(meterId, readingDate) {
            try {
                const startDate = readingDate;
                const endDate = readingDate;
                const response = await fetch(
                    `${DAILY_READING_API_URL}/ByDateRange?meterId=${meterId}&startDate=${startDate}&endDate=${endDate}`
                );

                if (response.ok) {
                    const readings = await response.json();

                    // Delete all existing readings for this date
                    for (const reading of readings) {
                        await fetch(`${DAILY_READING_API_URL}/${reading.readingId}`, {
                            method: 'DELETE'
                        });
                    }

                    showSuccess('Existing readings deleted successfully');
                }
            } catch (error) {
                console.error('Error deleting existing readings:', error);
                showError('Failed to delete existing readings');
            }
        }

        function clearForm() {
            document.getElementById('meterId').value = '';
            document.getElementById('readingDate').valueAsDate = new Date();
            document.getElementById('baseRate').value = '';
            document.getElementById('meterInfoDisplay').style.display = 'none';
            currentMeterLatestReading = 0;
            currentMeterApplicableRules = [];

            const tbody = document.getElementById('readingsTableBody');
            tbody.innerHTML = '<tr><td colspan="7" class="text-center text-muted">Select a meter to load TOD slots</td></tr>';

            calculateTotals();
        }

        async function viewAllReadings() {
            const modal = new bootstrap.Modal(document.getElementById('viewReadingsModal'));
            modal.show();
            // Don't load readings automatically - wait for user to apply filters
            const tbody = document.getElementById('allReadingsTableBody');
            tbody.innerHTML = '<tr><td colspan="9" class="text-center text-muted">Select filters to view readings</td></tr>';
        }

        async function loadAllReadings() {
            const filterMeterId = document.getElementById('filterMeterId').value;
            const startDate = document.getElementById('filterStartDate').value;
            const endDate = document.getElementById('filterEndDate').value;

            // Don't load if no filters are selected
            if (!filterMeterId && !startDate && !endDate) {
                const tbody = document.getElementById('allReadingsTableBody');
                tbody.innerHTML = '<tr><td colspan="9" class="text-center text-muted">Select filters to view readings</td></tr>';
                return;
            }

            const tbody = document.getElementById('allReadingsTableBody');
            tbody.innerHTML = '<tr><td colspan="9" class="text-center">Loading...</td></tr>';

            try {
                let url = `${DAILY_READING_API_URL}/AllReadings`;

                if (filterMeterId && startDate && endDate) {
                    url = `${DAILY_READING_API_URL}/ByDateRange?meterId=${filterMeterId}&startDate=${startDate}&endDate=${endDate}`;
                } else if (filterMeterId) {
                    url = `${DAILY_READING_API_URL}/ByMeter/${filterMeterId}`;
                } else if (startDate && endDate) {
                    url = `${DAILY_READING_API_URL}/ByDateRange?startDate=${startDate}&endDate=${endDate}`;
                }

                const response = await fetch(url);
                if (!response.ok) throw new Error('Failed to load readings');

                const readings = await response.json();

                if (readings.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="9" class="text-center text-muted">No readings found</td></tr>';
                    return;
                }

                tbody.innerHTML = readings.map(r => `
                    <tr>
                        <td>${r.readingDate}</td>
                        <td>${r.meterId}</td>
                        <td>${r.todRuleName}</td>
                        <td>${r.startTime} - ${r.endTime}</td>
                        <td>${r.previousReading.toFixed(2)}</td>
                        <td>${r.currentReading.toFixed(2)}</td>
                        <td>${r.consumptionKwh.toFixed(2)} kWh</td>
                        <td>₹${r.amount.toFixed(2)}</td>
                        <td class="text-center">
                            <button class="btn btn-sm btn-danger" onclick="deleteReading(${r.readingId})">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                `).join('');
            } catch (error) {
                tbody.innerHTML = '<tr><td colspan="9" class="text-center text-danger">Error loading readings</td></tr>';
            }
        }

        async function deleteReading(id) {
            if (!confirm('Are you sure you want to delete this reading?')) return;

            try {
                const response = await fetch(`${DAILY_READING_API_URL}/${id}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    showSuccess('Reading deleted successfully');
                    await loadAllReadings();
                } else {
                    showError('Failed to delete reading');
                }
            } catch (error) {
                showError('Error deleting reading');
            }
        }

        function clearFilters() {
            document.getElementById('filterMeterId').value = '';
            document.getElementById('filterStartDate').value = '';
            document.getElementById('filterEndDate').value = '';
            const tbody = document.getElementById('allReadingsTableBody');
            tbody.innerHTML = '<tr><td colspan="9" class="text-center text-muted">Select filters to view readings</td></tr>';
        }

        function viewMonthlyBills() {
            window.location.href = '/Home/MonthlyBill';
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
