@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "TOD Rule Management";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-clock-history"></i> Time-of-Day (TOD) Rules</h2>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#todRuleModal" onclick="prepareAddRule()">
            <i class="bi bi-plus-circle"></i> Add TOD Rule
        </button>
    </div>

    <!-- Filter Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="tariffFilter" class="form-label">Filter by Tariff</label>
                    <select class="form-select" id="tariffFilter">
                        <option value="all">All Tariffs</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="statusFilter" class="form-label">Filter by Status</label>
                    <select class="form-select" id="statusFilter">
                        <option value="all">All Status</option>
                        <option value="active">Active Only</option>
                        <option value="inactive">Inactive Only</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <button class="btn btn-outline-secondary w-100" onclick="clearFilters()">
                        <i class="bi bi-arrow-clockwise"></i> Clear Filters
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div id="loadingIndicator" class="text-center my-4" style="display: none;">
        <div class="spinner-border text-success" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2">Loading TOD rules...</p>
    </div>
    <div id="errorMessage" class="alert alert-danger alert-dismissible fade show" style="display: none;">
        <button type="button" class="btn-close" onclick="showError('')"></button>
        <span id="errorText"></span>
    </div>
    <div id="successMessage" class="alert alert-success alert-dismissible fade show" style="display: none;">
        <button type="button" class="btn-close" onclick="showSuccess('')"></button>
        <span id="successText"></span>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Rule ID</th>
                            <th>Rule Name</th>
                            <th>Time Period</th>
                            <th>Tariff</th>
                            <th>Surge Charge</th>
                            <th>Discount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="todRulesTableBody">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="todRuleModal" tabindex="-1" aria-labelledby="todRuleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="todRuleModalLabel">Add TOD Rule</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="todRuleForm">
                    <input type="hidden" id="todRuleId" value="0" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="ruleName" class="form-label">Rule Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="ruleName" placeholder="e.g., Peak Hours" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="tariffId" class="form-label">Tariff Plan <span class="text-danger">*</span></label>
                            <select class="form-select" id="tariffId" required>
                                <option value="">-- Select Tariff --</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="startTime" class="form-label">Start Time <span class="text-danger">*</span></label>
                            <input type="time" class="form-control" id="startTime" required>
                            <small class="form-text text-muted">Start of the time period</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="endTime" class="form-label">End Time <span class="text-danger">*</span></label>
                            <input type="time" class="form-control" id="endTime" required>
                            <small class="form-text text-muted">End of the time period</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="surgeChargePercent" class="form-label">Surge Charge (%)</label>
                            <input type="number" step="0.01" class="form-control" id="surgeChargePercent" placeholder="e.g., 50" value="0">
                            <small class="form-text text-muted">Additional charge during peak hours (0-200%)</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="discountPercent" class="form-label">Discount (%)</label>
                            <input type="number" step="0.01" class="form-control" id="discountPercent" placeholder="e.g., 20" value="0">
                            <small class="form-text text-muted">Discount during off-peak hours (0-100%)</small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="isActive" checked>
                            <label class="form-check-label" for="isActive">
                                Active Rule
                            </label>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Note:</strong> Surge charges increase the rate, while discounts decrease it. Only one should typically be applied at a time.
                    </div>

                    <input type="hidden" id="createdBy" value="Admin" />
                    <input type="hidden" id="updatedBy" value="" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" onclick="saveTodRule()">
                    <i class="bi bi-save"></i> Save Rule
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const API_BASE_URL = 'https://localhost:7272/api';
        const TOD_RULE_API_URL = `${API_BASE_URL}/TodRule`;
        const TARIFF_API_URL = `${API_BASE_URL}/Tariff`;

        let allRules = [];
        let allTariffs = [];
        let filteredRules = [];
        let todRuleModal;

        document.addEventListener('DOMContentLoaded', function() {
            todRuleModal = new bootstrap.Modal(document.getElementById('todRuleModal'));
            fetchAllData();

            // Add event listeners for filters
            document.getElementById('tariffFilter').addEventListener('change', applyFilters);
            document.getElementById('statusFilter').addEventListener('change', applyFilters);
        });

        async function fetchAllData() {
            await fetchTariffs();
            await fetchTodRules();
        }

        async function fetchTariffs() {
            try {
                const response = await fetch(`${TARIFF_API_URL}/AllTariffs`);
                if (!response.ok) throw new Error('Failed to load tariffs');
                allTariffs = await response.json();
                populateTariffDropdown();
                populateTariffFilter();
            } catch (error) {
                console.error('Error loading tariffs:', error);
                showError('Failed to load tariffs: ' + error.message);
            }
        }

        function populateTariffDropdown() {
            const select = document.getElementById('tariffId');
            select.innerHTML = '<option value="">-- Select Tariff --</option>';

            allTariffs.forEach(tariff => {
                select.innerHTML += `<option value="${tariff.tariffId}">${tariff.name} - $${tariff.baseRate.toFixed(4)}/kWh</option>`;
            });
        }

        function populateTariffFilter() {
            const filterSelect = document.getElementById('tariffFilter');
            filterSelect.innerHTML = '<option value="all">All Tariffs</option>';

            allTariffs.forEach(tariff => {
                filterSelect.innerHTML += `<option value="${tariff.tariffId}">${tariff.name}</option>`;
            });
        }

        async function fetchTodRules() {
            try {
                showLoading(true);
                showError('');
                const response = await fetch(`${TOD_RULE_API_URL}/AllRules`);

                if (!response.ok) throw new Error(`HTTP error! status: ${response.status}`);

                allRules = await response.json();
                filteredRules = [...allRules];
                applyFilters();
                showLoading(false);
            } catch (error) {
                console.error('Error loading TOD rules:', error);
                showError('Failed to load TOD rules: ' + error.message);
                showLoading(false);
            }
        }

        function applyFilters() {
            const tariffFilter = document.getElementById('tariffFilter').value;
            const statusFilter = document.getElementById('statusFilter').value;

            filteredRules = allRules.filter(rule => {
                // Tariff filter
                const tariffMatch = tariffFilter === 'all' || rule.tariffId.toString() === tariffFilter;

                // Status filter
                let statusMatch = true;
                if (statusFilter === 'active') {
                    statusMatch = rule.isActive === true;
                } else if (statusFilter === 'inactive') {
                    statusMatch = rule.isActive === false;
                }

                return tariffMatch && statusMatch;
            });

            renderTodRulesTable(filteredRules);
        }

        function clearFilters() {
            document.getElementById('tariffFilter').value = 'all';
            document.getElementById('statusFilter').value = 'all';
            applyFilters();
        }

        function renderTodRulesTable(rules) {
            const tbody = document.getElementById('todRulesTableBody');
            tbody.innerHTML = '';

            if (rules && rules.length > 0) {
                rules.forEach(rule => {
                    const statusBadge = rule.isActive
                        ? '<span class="badge bg-success">Active</span>'
                        : '<span class="badge bg-secondary">Inactive</span>';

                    const surgeDisplay = rule.surgeChargePercent > 0
                        ? `<span class="text-danger">+${rule.surgeChargePercent}%</span>`
                        : '<span class="text-muted">None</span>';

                    const discountDisplay = rule.discountPercent > 0
                        ? `<span class="text-success">-${rule.discountPercent}%</span>`
                        : '<span class="text-muted">None</span>';

                    const rowHtml = `
                        <tr>
                            <td><strong>${rule.todRuleId}</strong></td>
                            <td>${rule.ruleName}</td>
                            <td><span class="badge bg-success">${rule.startTime} - ${rule.endTime}</span></td>
                            <td>${rule.tariffName}</td>
                            <td>${surgeDisplay}</td>
                            <td>${discountDisplay}</td>
                            <td>${statusBadge}</td>
                            <td>
                                <button class="btn btn-sm btn-outline-success me-1" onclick="editTodRule(${rule.todRuleId})" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" onclick="deleteTodRule(${rule.todRuleId}, '${rule.ruleName}')" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    `;
                    tbody.insertAdjacentHTML('beforeend', rowHtml);
                });
            } else {
                tbody.innerHTML = '<tr><td colspan="8" class="text-center">No TOD rules found matching the current filters.</td></tr>';
            }
        }

        function prepareAddRule() {
            document.getElementById('todRuleModalLabel').textContent = 'Add TOD Rule';
            document.getElementById('todRuleForm').reset();
            document.getElementById('todRuleId').value = '0';
            document.getElementById('isActive').checked = true;
            document.getElementById('createdBy').value = 'Admin';
            document.getElementById('updatedBy').value = '';
        }

        async function editTodRule(id) {
            const rule = allRules.find(r => r.todRuleId === id);
            if (!rule) {
                showError('TOD rule not found');
                return;
            }

            document.getElementById('todRuleModalLabel').textContent = 'Edit TOD Rule';
            document.getElementById('todRuleId').value = rule.todRuleId;
            document.getElementById('ruleName').value = rule.ruleName;
            document.getElementById('tariffId').value = rule.tariffId;
            document.getElementById('startTime').value = rule.startTime;
            document.getElementById('endTime').value = rule.endTime;
            document.getElementById('surgeChargePercent').value = rule.surgeChargePercent;
            document.getElementById('discountPercent').value = rule.discountPercent;
            document.getElementById('isActive').checked = rule.isActive;
            document.getElementById('updatedBy').value = 'Admin';

            todRuleModal.show();
        }

        async function saveTodRule() {
            const isEdit = document.getElementById('todRuleId').value !== '0';
            const ruleName = document.getElementById('ruleName').value.trim();
            const tariffId = document.getElementById('tariffId').value;
            const startTime = document.getElementById('startTime').value;
            const endTime = document.getElementById('endTime').value;
            const surgeChargePercent = parseFloat(document.getElementById('surgeChargePercent').value);
            const discountPercent = parseFloat(document.getElementById('discountPercent').value);
            const isActive = document.getElementById('isActive').checked;

            if (!ruleName || !tariffId || !startTime || !endTime) {
                showError('Please fill in all required fields');
                return;
            }

            if (surgeChargePercent < 0 || surgeChargePercent > 200) {
                showError('Surge charge must be between 0 and 200%');
                return;
            }

            if (discountPercent < 0 || discountPercent > 100) {
                showError('Discount must be between 0 and 100%');
                return;
            }

            const ruleData = {
                todRuleId: parseInt(document.getElementById('todRuleId').value),
                ruleName: ruleName,
                tariffId: parseInt(tariffId),
                startTime: startTime,
                endTime: endTime,
                surgeChargePercent: surgeChargePercent,
                discountPercent: discountPercent,
                isActive: isActive,
                createdBy: document.getElementById('createdBy').value,
                updatedBy: isEdit ? document.getElementById('updatedBy').value : null
            };

            const endpoint = isEdit ? `${TOD_RULE_API_URL}/Update` : `${TOD_RULE_API_URL}/Create`;
            const method = isEdit ? 'PUT' : 'POST';

            try {
                const response = await fetch(endpoint, {
                    method: method,
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(ruleData),
                });

                if (response.ok) {
                    todRuleModal.hide();
                    showSuccess(isEdit ? 'TOD rule updated successfully!' : 'TOD rule created successfully!');
                    await fetchTodRules();
                } else {
                    const errorText = await response.text();
                    showError(`Failed to save TOD rule: ${errorText}`);
                }
            } catch (error) {
                console.error('Error saving TOD rule:', error);
                showError('An error occurred while saving the TOD rule.');
            }
        }

        async function deleteTodRule(id, name) {
            if (!confirm(`Are you sure you want to delete TOD rule "${name}"?`)) {
                return;
            }

            try {
                const response = await fetch(`${TOD_RULE_API_URL}/${id}`, {
                    method: 'DELETE',
                });

                if (response.ok) {
                    showSuccess('TOD rule deleted successfully!');
                    await fetchTodRules();
                } else {
                    const errorText = await response.text();
                    showError(`Failed to delete TOD rule: ${errorText}`);
                }
            } catch (error) {
                console.error('Error deleting TOD rule:', error);
                showError('An error occurred while deleting the TOD rule.');
            }
        }

        function showLoading(show) {
            document.getElementById('loadingIndicator').style.display = show ? 'block' : 'none';
        }

        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            const errorText = document.getElementById('errorText');
            if (message) {
                errorText.textContent = message;
                errorDiv.style.display = 'block';
                setTimeout(() => { errorDiv.style.display = 'none'; }, 5000);
            } else {
                errorDiv.style.display = 'none';
            }
        }

        function showSuccess(message) {
            const successDiv = document.getElementById('successMessage');
            const successText = document.getElementById('successText');
            if (message) {
                successText.textContent = message;
                successDiv.style.display = 'block';
                setTimeout(() => { successDiv.style.display = 'none'; }, 3000);
            } else {
                successDiv.style.display = 'none';
            }
        }
    </script>
}