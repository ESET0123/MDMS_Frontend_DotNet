@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Tariff Management";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-receipt"></i> Tariff Plans</h2>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#tariffModal" onclick="prepareAddTariff()">
            <i class="bi bi-plus-circle"></i> Add Tariff
        </button>
    </div>

    <div id="loadingIndicator" class="text-center my-4" style="display: none;">
        <div class="spinner-border text-success" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2">Loading tariff plans...</p>
    </div>
    <div id="errorMessage" class="alert alert-danger alert-dismissible fade show" style="display: none;">
        <button type="button" class="btn-close" onclick="showError('')"></button>
        <span id="errorText"></span>
    </div>
    <div id="successMessage" class="alert alert-success alert-dismissible fade show" style="display: none;">
        <button type="button" class="btn-close" onclick="showSuccess('')"></button>
        <span id="successText"></span>
    </div>

    <div class="row" id="tariffCardsContainer">
    </div>
</div>

<div class="modal fade" id="tariffModal" tabindex="-1" aria-labelledby="tariffModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tariffModalLabel">Add New Tariff</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="tariffForm">
                    <input type="hidden" id="tariffId" name="TariffId" value="0" />

                    <div class="mb-3">
                        <label for="name" class="form-label">Tariff Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="name" placeholder="e.g., Residential Basic" required>
                    </div>
                    <div class="mb-3">
                        <label for="effectiveFrom" class="form-label">Effective From <span class="text-danger">*</span></label>
                        <input type="date" class="form-control" id="effectiveFrom" required>
                    </div>
                    <div class="mb-3">
                        <label for="effectiveTo" class="form-label">Effective To (Optional)</label>
                        <input type="date" class="form-control" id="effectiveTo">
                    </div>
                    <div class="mb-3">
                        <label for="baseRate" class="form-label">Base Rate (₹/kWh) <span class="text-danger">*</span></label>
                        <input type="number" step="0.0001" class="form-control" id="baseRate" placeholder="e.g., 0.15" required>
                    </div>
                    <div class="mb-3">
                        <label for="taxRate" class="form-label">Tax Rate (%) <span class="text-danger">*</span></label>
                        <input type="number" step="0.01" class="form-control" id="taxRate" placeholder="e.g., 8.5" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" onclick="saveTariff()">
                    <i class="bi bi-save"></i> Save Tariff
                </button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        const API_BASE_URL = '@Configuration["ApiBaseUrl"]';
        const TARIFF_API_URL = `${API_BASE_URL}/api/Tariff`;
        let allTariffs = [];

        document.addEventListener('DOMContentLoaded', (event) => {
            fetchTariffPlans();
        });

        function showLoading(isLoading) {
            document.getElementById('loadingIndicator').style.display = isLoading ? 'block' : 'none';
        }

        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            const errorText = document.getElementById('errorText');
            if (message) {
                errorText.textContent = message;
                errorDiv.style.display = 'block';
                setTimeout(() => { errorDiv.style.display = 'none'; }, 5000);
            } else {
                errorDiv.style.display = 'none';
            }
        }

        function showSuccess(message) {
            const successDiv = document.getElementById('successMessage');
            const successText = document.getElementById('successText');
            if (message) {
                successText.textContent = message;
                successDiv.style.display = 'block';
                setTimeout(() => { successDiv.style.display = 'none'; }, 3000);
            } else {
                successDiv.style.display = 'none';
            }
        }

        function formatDate(dateString) {
            if (!dateString) return 'N/A';
            return new Date(dateString + 'T00:00:00').toLocaleDateString(undefined, {
                year: 'numeric', month: 'long', day: 'numeric'
            });
        }

        function formatInputDate(dateString) {
            if (!dateString) return '';
            return dateString.split('T')[0] || dateString;
        }

        async function fetchTariffPlans() {
            try {
                showLoading(true);
                showError('');
                const response = await fetch(`${TARIFF_API_URL}/AllTariffs`);

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                allTariffs = await response.json();
                renderTariffCards(allTariffs);
                showLoading(false);

            } catch (error) {
                console.error('Error loading tariffs:', error);
                showError('Failed to load tariffs data: ' + error.message);
                showLoading(false);
            }
        }

        function renderTariffCards(plans) {
            const container = document.getElementById('tariffCardsContainer');
            container.innerHTML = '';

            if (plans && plans.length > 0) {
                plans.forEach(plan => {
                    const isActive = plan.effectiveTo ? new Date(plan.effectiveTo) > new Date() : true;
                    const statusBadge = isActive
                        ? '<span class="badge bg-success">Active</span>'
                        : '<span class="badge bg-secondary">Expired</span>';

                    const cardHtml = `
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-sm h-100 border-top border-success border-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h5 class="card-title mb-0">${plan.name}</h5>
                                        ${statusBadge}
                                    </div>
                                    <div class="mb-3">
                                        <small class="text-muted">Effective From</small>
                                        <div class="fw-semibold">${formatDate(plan.effectiveFrom)}</div>
                                    </div>
                                    <div class="text-center py-3 bg-light rounded mb-3">
                                        <h3 class="text-success mb-0">₹${plan.baseRate.toFixed(4)}</h3>
                                        <small class="text-muted">per kWh</small>
                                    </div>
                                    <div class="mb-3">
                                        <small class="text-muted">Tax Rate:</small>
                                        <span class="fw-semibold">${plan.taxRate}%</span>
                                    </div>
                                    <div class="d-grid gap-2">
                                        <button class="btn btn-outline-success btn-sm" onclick="viewTariffSlabs(${plan.tariffId}, '${plan.name}')">
                                            <i class="bi bi-layers"></i> View Tariff Slabs
                                        </button>
                                        <div class="btn-group" role="group">
                                            <button class="btn btn-outline-success btn-sm" onclick="viewTariffDetails(${plan.tariffId})">
                                                <i class="bi bi-pencil"></i> Edit
                                            </button>
                                            <button class="btn btn-outline-danger btn-sm" onclick="deleteTariff(${plan.tariffId}, '${plan.name}')">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                    container.insertAdjacentHTML('beforeend', cardHtml);
                });
            } else {
                container.innerHTML = '<div class="col-12"><div class="alert alert-info">No tariff plans found. Click "Add Tariff" to create one.</div></div>';
            }
        }

        function viewTariffSlabs(tariffId, tariffName) {
            sessionStorage.setItem('selectedTariffId', tariffId);
            sessionStorage.setItem('selectedTariffName', tariffName);

            window.location.href = '@Url.Action("TariffSlab", "Home")';
        }

        function getTariffDataFromForm() {
            return {
                tariffId: parseInt(document.getElementById('tariffId').value) || null,
                name: document.getElementById('name').value,
                effectiveFrom: new Date(document.getElementById('effectiveFrom').value + 'T00:00:00').toISOString(),
                effectiveTo: document.getElementById('effectiveTo').value ? new Date(document.getElementById('effectiveTo').value + 'T00:00:00').toISOString() : null,
                baseRate: parseFloat(document.getElementById('baseRate').value),
                taxRate: parseFloat(document.getElementById('taxRate').value)
            };
        }

        async function saveTariff() {
            const tariffData = getTariffDataFromForm();

            if (!tariffData.name || !tariffData.effectiveFrom || !tariffData.baseRate || !tariffData.taxRate) {
                showError('Please fill in all required fields');
                return;
            }

            const isUpdate = tariffData.tariffId > 0;
            const endpoint = isUpdate ? `${TARIFF_API_URL}/Update` : `${TARIFF_API_URL}/Create`;
            const method = isUpdate ? 'PUT' : 'POST';

            try {
                const response = await fetch(endpoint, {
                    method: method,
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(tariffData),
                });

                if (response.ok) {
                    var modalElement = document.getElementById('tariffModal');
                    var modal = bootstrap.Modal.getInstance(modalElement);
                    modal.hide();

                    showSuccess(isUpdate ? 'Tariff updated successfully!' : 'Tariff created successfully!');
                    await fetchTariffPlans();
                } else {
                    const errorText = await response.text();
                    showError(`Failed to save tariff: ${errorText}`);
                }
            } catch (error) {
                console.error('Error saving tariff:', error);
                showError('An error occurred while communicating with the API.');
            }
        }

        function prepareAddTariff() {
            document.getElementById('tariffForm').reset();
            document.getElementById('tariffId').value = '0';
            document.getElementById('tariffModalLabel').textContent = 'Add New Tariff';
            showError('');
        }

        function viewTariffDetails(id) {
            const plan = allTariffs.find(t => t.tariffId === id);

            if (plan) {
                document.getElementById('tariffId').value = plan.tariffId;
                document.getElementById('name').value = plan.name;
                document.getElementById('effectiveFrom').value = formatInputDate(plan.effectiveFrom);
                document.getElementById('effectiveTo').value = formatInputDate(plan.effectiveTo);
                document.getElementById('baseRate').value = plan.baseRate;
                document.getElementById('taxRate').value = plan.taxRate;
                document.getElementById('tariffModalLabel').textContent = `Edit Tariff: ${plan.name}`;
                showError('');

                var modal = new bootstrap.Modal(document.getElementById('tariffModal'));
                modal.show();
            } else {
                showError('Tariff not found in local data.');
            }
        }

        async function deleteTariff(id, name) {
            if (!confirm(`Are you sure you want to delete the tariff "${name}"?\n\nWarning: This will also delete all associated tariff slabs!`)) {
                return;
            }

            try {
                const response = await fetch(`${TARIFF_API_URL}/${id}`, {
                    method: 'DELETE',
                });

                if (response.ok) {
                    showSuccess('Tariff deleted successfully!');
                    await fetchTariffPlans();
                } else {
                    const errorText = await response.text();
                    showError(`Failed to delete tariff: ${errorText}`);
                }
            } catch (error) {
                console.error('Error deleting tariff:', error);
                showError('An error occurred while communicating with the API.');
            }
        }

    </script>
}

<style>
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
</style>