        function viewConsumerMeters(consumerId) {
            const consumer = allConsumers.find(c => c.consumerId === consumerId);
            if (!consumer) return showError('Consumer not found');

            const consumerMeters = allMeters.filter(m => m.consumerId === consumerId);
            const activeMeters = consumerMeters.filter(m => m.statusName?.toLowerCase() === 'active');

            // Update modal header
            document.getElementById('consumerMeterHeader').textContent = `Meters for ${consumer.name}`;
            document.getElementById('consumerMeterName').textContent = consumer.name;
            document.getElementById('consumerMeterEmail').textContent = consumer.email;
            document.getElementById('activeMetersCount').textContent = `${activeMeters.length} Active`;
            document.getElementById('totalMetersCount').textContent = `${consumerMeters.length} Total`;

            // Populate meters table
            const tbody = document.getElementById('consumerMetersTableBody');
            tbody.innerHTML = '';

            if (consumerMeters.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="7" class="text-center py-4 text-muted">
                            <i class="bi bi-lightning-charge display-6 text-light"></i>
                            <p class="mt-3">No meters connected to this consumer</p>
                        </td>
                    </tr>`;
            } else {
                consumerMeters.forEach(meter => {
                    const statusBadge = meter.statusName?.toLowerCase() === 'active'
                        ? '<span class="badge bg-success">Active</span>'
                        : '<span class="badge bg-secondary">Inactive</span>';

                    const row = `
                        <tr>
                            <td>
                                <div class="fw-bold">MTR${meter.meterId.toString().padStart(4, '0')}</div>
                                <small class="text-muted">${meter.iccid || 'No ICCID'}</small>
                            </td>
                            <td>
                                <code class="text-dark">${meter.ipaddress}</code>
                            </td>
                            <td>${meter.dtrName}</td>
                            <td>${meter.manufacturerName}</td>
                            <td>${new Date(meter.installDate).toLocaleDateString()}</td>
                            <td>${statusBadge}</td>
                            <td>
                                <div class="fw-semibold">${meter.latestReading || 0} kWh</div>
                                <small class="text-muted">Last reading</small>
                            </td>
                        </tr>`;
                    tbody.insertAdjacentHTML('beforeend', row);
                });
            }

            viewMetersModal.show();
        }

        function assignNewMeter() {
            // Redirect to meter management page with consumer pre-selected
            const consumerId = allConsumers.find(c =>
                c.name === document.getElementById('consumerMeterName').textContent
            )?.consumerId;

            if (consumerId) {
                sessionStorage.setItem('selectedConsumerId', consumerId);
                window.location.href = '@Url.Action("Meter", "Home")';
            } else {
                window.location.href = '@Url.Action("Meter", "Home")';
            }
        }

        function prepareAddConsumer() {
            document.getElementById('consumerForm').reset();
            document.getElementById('isEdit').value = 'false';
            document.getElementById('consumerModalLabel').innerHTML = '<i class="bi bi-person-plus me-2"></i>Add Consumer';
            document.getElementById('password').required = true;
            document.getElementById('passwordRequired').style.display = 'inline';
            document.getElementById('passwordOptional').style.display = 'none';
            document.getElementById('password').placeholder = 'Enter secure password';
        }

        function editConsumer(id) {
            const c = allConsumers.find(x => x.consumerId === id);
            if (!c) return showError('Consumer not found');

            document.getElementById('consumerModalLabel').innerHTML = '<i class="bi bi-pencil me-2"></i>Edit Consumer';
            document.getElementById('isEdit').value = 'true';
            document.getElementById('consumerId').value = c.consumerId;
            document.getElementById('name').value = c.name;
            document.getElementById('email').value = c.email;
            document.getElementById('phone').value = c.phone;
            document.getElementById('address').value = c.address;
            document.getElementById('statusId').value = c.statusId;
            document.getElementById('createdBy').value = c.createdBy;
            document.getElementById('password').value = '';
            document.getElementById('password').required = false;
            document.getElementById('passwordRequired').style.display = 'none';
            document.getElementById('passwordOptional').style.display = 'inline';
            document.getElementById('password').placeholder = 'Enter new password (optional)';

            consumerModal.show();
        }

        function hashPassword(password) {
            return crypto.subtle.digest('SHA-256', new TextEncoder().encode(password))
                .then(buf => {
                    return btoa(String.fromCharCode(...new Uint8Array(buf)));
                });
        }

        async function saveConsumer() {
            const isEdit = document.getElementById('isEdit').value === 'true';
            const passwordValue = document.getElementById('password').value.trim();

            // Validate required fields
            const name = document.getElementById('name').value.trim();
            const email = document.getElementById('email').value.trim();
            const phone = document.getElementById('phone').value.trim();
            const address = document.getElementById('address').value.trim();
            const statusId = parseInt(document.getElementById('statusId').value);

            if (!name || !email || !phone || !address || !statusId) {
                showError('Please fill in all required fields');
                return;
            }

            // Check password requirement for new consumers
            if (!isEdit && !passwordValue) {
                showError('Password is required for new consumers');
                return;
            }

            // Validate password strength for new consumers
            if (!isEdit && passwordValue.length < 8) {
                showError('Password must be at least 8 characters long');
                return;
            }

            // Hash password if provided
            let passwordHash = null;
            if (passwordValue) {
                passwordHash = await hashPassword(passwordValue);
            }

            const data = {
                consumerId: isEdit ? parseInt(document.getElementById('consumerId').value) : 0,
                name: name,
                email: email,
                phone: phone,
                address: address,
                statusId: statusId,
                passwordHash: passwordHash,
                createdBy: document.getElementById('createdBy').value.trim() || "System",
                updatedBy: isEdit ? "System" : null
            };

            const endpoint = isEdit ? `${CONSUMER_API_URL}/Update` : `${CONSUMER_API_URL}/Create`;
            const method = isEdit ? 'PUT' : 'POST';

            try {
                const res = await fetch(endpoint, {
                    method,
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                if (!res.ok) {
                    const errorText = await res.text();
                    throw new Error(errorText || 'Operation failed');
                }

                showSuccess(isEdit ? 'Consumer updated successfully' : 'Consumer added successfully');
                consumerModal.hide();
                await fetchAllData();
            } catch (err) {
                showError(err.message);
            }
        }

        async function deleteConsumer(id, name) {
            if (!confirm(`Are you sure you want to delete consumer "${name}"?\n\nThis action cannot be undone.`)) return;
            try {
                const res = await fetch(`${CONSUMER_API_URL}/${id}`, { method: 'DELETE' });
                if (!res.ok) throw new Error(await res.text());
                showSuccess('Consumer deleted successfully');
                await fetchAllData();
            } catch (err) {
                showError(err.message);
            }
        }

        function showLoading(show) {
            document.getElementById('loadingIndicator').style.display = show ? 'block' : 'none';
        }

        function showError(msg) {
            const el = document.getElementById('errorMessage');
            document.getElementById('errorText').textContent = msg;
            el.style.display = msg ? 'block' : 'none';
            if (msg) setTimeout(() => el.style.display = 'none', 5000);
        }

        function showSuccess(msg) {
            const el = document.getElementById('successMessage');
            document.getElementById('successText').textContent = msg;
            el.style.display = msg ? 'block' : 'none';
            if (msg) setTimeout(() => el.style.display = 'none', 3000);
        }
    </script>
