@section Scripts {
    <script>
        const CONSUMER_API_URL = `${API_BASE_URL}/api/Consumer`;
        const STATUS_API_URL = `${API_BASE_URL}/api/Status`;
        const METER_API_URL = `${API_BASE_URL}/api/Meter`;

        let allConsumers = [];
        let allStatuses = [];
        let allMeters = [];
        let filteredConsumers = [];
        let consumerModal;
        let viewMetersModal;

        document.addEventListener('DOMContentLoaded', async () => {
            consumerModal = new bootstrap.Modal(document.getElementById('consumerModal'));
            viewMetersModal = new bootstrap.Modal(document.getElementById('viewMetersModal'));

            // Add password toggle functionality
            document.getElementById('togglePassword')?.addEventListener('click', function() {
                const passwordInput = document.getElementById('password');
                const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);
                this.innerHTML = type === 'password' ? '<i class="bi bi-eye"></i>' : '<i class="bi bi-eye-slash"></i>';
            });

            // Add filter event listeners
            document.getElementById('nameFilter').addEventListener('input', applyFilters);
            document.getElementById('statusFilter').addEventListener('change', applyFilters);
            document.getElementById('meterFilter').addEventListener('change', applyFilters);

            await fetchAllData();
        });

        async function fetchAllData() {
            await fetchStatuses();
            await fetchMeters();
            await fetchConsumers();
        }

        async function fetchMeters() {
            try {
                const response = await fetch(`${METER_API_URL}/AllMeters`);
                if (!response.ok) throw new Error('Failed to load meters');
                allMeters = await response.json();
            } catch (error) {
                console.error('Error loading meters:', error);
            }
        }

        function updateStats(consumers) {
            const total = consumers.length;
            const active = consumers.filter(c => c.statusName?.toLowerCase() === 'active').length;

            // Calculate consumers without meters and active meters
            let noMeterCount = 0;
            let activeMeterCount = 0;

            consumers.forEach(consumer => {
                const consumerMeters = allMeters.filter(m => m.consumerId === consumer.consumerId);
                if (consumerMeters.length === 0) {
                    noMeterCount++;
                }
                activeMeterCount += consumerMeters.filter(m => m.statusName?.toLowerCase() === 'active').length;
            });

            document.getElementById('totalConsumers').textContent = total;
            document.getElementById('activeConsumers').textContent = active;
            document.getElementById('noMeterConsumers').textContent = noMeterCount;
            document.getElementById('activeMeters').textContent = activeMeterCount;
            document.getElementById('consumersCount').textContent = `${filteredConsumers.length} consumer${filteredConsumers.length !== 1 ? 's' : ''}`;
        }

        function applyFilters() {
            const nameFilter = document.getElementById('nameFilter').value.toLowerCase();
            const statusFilter = document.getElementById('statusFilter').value;
            const meterFilter = document.getElementById('meterFilter').value;

            filteredConsumers = allConsumers.filter(consumer => {
                // Name filter
                const nameMatch = !nameFilter ||
                    consumer.name.toLowerCase().includes(nameFilter) ||
                    consumer.email.toLowerCase().includes(nameFilter);

                // Status filter
                let statusMatch = true;
                if (statusFilter === 'active') {
                    statusMatch = consumer.statusName?.toLowerCase() === 'active';
                } else if (statusFilter === 'inactive') {
                    statusMatch = consumer.statusName?.toLowerCase() !== 'active';
                }

                // Meter filter
                let meterMatch = true;
                const consumerMeters = allMeters.filter(m => m.consumerId === consumer.consumerId);
                const hasActiveMeters = consumerMeters.some(m => m.statusName?.toLowerCase() === 'active');

                if (meterFilter === 'with_meters') {
                    meterMatch = hasActiveMeters;
                } else if (meterFilter === 'without_meters') {
                    meterMatch = consumerMeters.length === 0;
                }

                return nameMatch && statusMatch && meterMatch;
            });

            updateStats(filteredConsumers);
            renderConsumersTable();
        }

        function clearFilters() {
            document.getElementById('nameFilter').value = '';
            document.getElementById('statusFilter').value = 'all';
            document.getElementById('meterFilter').value = 'all';
            applyFilters();
        }

        async function fetchStatuses() {
            try {
                const res = await fetch(`${STATUS_API_URL}/AllStatuses`);
                if (!res.ok) throw new Error('Failed to fetch statuses');
                allStatuses = await res.json();

                const select = document.getElementById('statusId');
                select.innerHTML = '<option value="">-- Select Status --</option>';

                allStatuses.forEach(s => {
                    select.innerHTML += `<option value="${s.statusId}">${s.name}</option>`;
                });
            } catch (err) {
                showError(err.message);
            }
        }

        async function fetchConsumers() {
            try {
                showLoading(true);
                const res = await fetch(`${CONSUMER_API_URL}/AllConsumers`);
                if (!res.ok) throw new Error('Failed to load consumers');
                allConsumers = await res.json();

                // Validate consumer status based on meter activity
                await validateConsumerStatuses();

                filteredConsumers = [...allConsumers];
                updateStats(filteredConsumers);
                applyFilters();
            } catch (err) {
                showError(err.message);
            } finally {
                showLoading(false);
            }
        }

        async function validateConsumerStatuses() {
            const updates = [];

            for (const consumer of allConsumers) {
                const consumerMeters = allMeters.filter(m => m.consumerId === consumer.consumerId);
                const hasActiveMeters = consumerMeters.some(m => m.statusName?.toLowerCase() === 'active');

                // If consumer is active but has no active meters, deactivate them
                if (consumer.statusName?.toLowerCase() === 'active' && !hasActiveMeters) {
                    const inactiveStatus = allStatuses.find(s => s.name.toLowerCase() === 'inactive');
                    if (inactiveStatus) {
                        updates.push(updateConsumerStatus(consumer.consumerId, inactiveStatus.statusId));
                    }
                }
            }

            // Execute all updates
            if (updates.length > 0) {
                await Promise.all(updates);
                // Reload consumers to get updated statuses
                const res = await fetch(`${CONSUMER_API_URL}/AllConsumers`);
                if (res.ok) {
                    allConsumers = await res.json();
                }
            }
        }

        async function updateConsumerStatus(consumerId, statusId) {
            try {
                const consumer = allConsumers.find(c => c.consumerId === consumerId);
                if (!consumer) return;

                const updateData = {
                    consumerId: consumerId,
                    name: consumer.name,
                    email: consumer.email,
                    phone: consumer.phone,
                    address: consumer.address,
                    statusId: statusId,
                    createdBy: consumer.createdBy,
                    updatedBy: "System"
                };

                await fetch(`${CONSUMER_API_URL}/Update`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(updateData)
                });
            } catch (error) {
                console.error(`Failed to update consumer ${consumerId}:`, error);
            }
        }

        function getStatusRowClass(statusName, consumerId) {
            const status = statusName?.toLowerCase();
            const consumerMeters = allMeters.filter(m => m.consumerId === consumerId);
            const hasActiveMeters = consumerMeters.some(m => m.statusName?.toLowerCase() === 'active');

            // Override status if consumer is active but has no active meters
            if (status === 'active' && !hasActiveMeters) {
                return 'table-warning'; // Warning color for inconsistent status
            }

            if (status === 'active') return 'table-success';
            if (status === 'inactive') return 'table-secondary';
            if (status === 'suspended') return 'table-warning';
            if (status === 'deactivated') return 'table-dark';
            return '';
        }

        function getMeterStatus(consumerId) {
            const consumerMeters = allMeters.filter(m => m.consumerId === consumerId);

            if (consumerMeters.length === 0) {
                return {
                    text: 'No Meters',
                    class: 'bg-secondary',
                    icon: 'bi-x-circle',
                    count: 0,
                    activeCount: 0
                };
            }

            const activeMeters = consumerMeters.filter(m => m.statusName?.toLowerCase() === 'active');

            if (activeMeters.length === 0) {
                return {
                    text: 'No Active Meters',
                    class: 'bg-warning',
                    icon: 'bi-pause-circle',
                    count: consumerMeters.length,
                    activeCount: 0
                };
            }

            return {
                text: `${activeMeters.length} Active`,
                class: 'bg-success',
                icon: 'bi-check-circle',
                count: consumerMeters.length,
                activeCount: activeMeters.length
            };
        }

        function renderConsumersTable() {
            const tbody = document.getElementById('consumersTableBody');
            tbody.innerHTML = '';

            if (filteredConsumers.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="6" class="text-center py-5">
                            <div class="text-muted">
                                <i class="bi bi-people display-6 text-light"></i>
                                <p class="mt-3">No consumers found matching your filters</p>
                                <button class="btn btn-outline-success mt-2" onclick="clearFilters()">
                                    <i class="bi bi-arrow-clockwise me-2"></i> Clear Filters
                                </button>
                            </div>
                        </td>
                    </tr>`;
                return;
            }

            filteredConsumers.forEach(c => {
                const rowClass = getStatusRowClass(c.statusName, c.consumerId);
