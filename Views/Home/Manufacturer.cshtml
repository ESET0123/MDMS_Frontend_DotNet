@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manufacturer";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-building"></i> Manufacturer Management</h2>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#manufacturerModal" onclick="prepareAddManufacturer()">
            <i class="bi bi-plus-circle"></i> Add Manufacturer
        </button>
    </div>

    <div id="loadingIndicator" class="text-center my-4" style="display: none;">
        <div class="spinner-border text-success" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2">Loading manufacturers...</p>
    </div>
    <div id="errorMessage" class="alert alert-danger alert-dismissible fade show" style="display: none;">
        <button type="button" class="btn-close" onclick="showError('')"></button>
        <span id="errorText"></span>
    </div>
    <div id="successMessage" class="alert alert-success alert-dismissible fade show" style="display: none;">
        <button type="button" class="btn-close" onclick="showSuccess('')"></button>
        <span id="successText"></span>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Manufacturer ID</th>
                            <th>Name</th>
                            <th>Meter Count</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="manufacturersTableBody">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="manufacturerModal" tabindex="-1" aria-labelledby="manufacturerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="manufacturerModalLabel">Add Manufacturer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="manufacturerForm">
                    <input type="hidden" id="isEdit" value="false" />
                    <input type="hidden" id="manufacturerId" value="0" />

                    <div class="mb-3">
                        <label for="name" class="form-label">Manufacturer Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="name" placeholder="e.g., Siemens, ABB, Schneider" required>
                        <small class="form-text text-muted">Enter the name of the manufacturer</small>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" onclick="saveManufacturer()">
                    <i class="bi bi-save"></i> Save Manufacturer
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="viewManufacturerModal" tabindex="-1" aria-labelledby="viewManufacturerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewManufacturerModalLabel">Manufacturer Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-2">
                    <div class="col-5 fw-bold">Manufacturer ID:</div>
                    <div class="col-7" id="viewManufacturerId"></div>
                </div>
                <div class="row mb-2">
                    <div class="col-5 fw-bold">Name:</div>
                    <div class="col-7" id="viewName"></div>
                </div>
                <div class="row mb-2">
                    <div class="col-5 fw-bold">Meter Count:</div>
                    <div class="col-7" id="viewMeterCount"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const API_BASE_URL = '@Configuration["ApiBaseUrl"]';
        const MANUFACTURER_API_URL = `${API_BASE_URL}/api/Manufacturer`;

        let allManufacturers = [];
        let manufacturerModal;
        let viewManufacturerModal;

        document.addEventListener('DOMContentLoaded', function() {
            manufacturerModal = new bootstrap.Modal(document.getElementById('manufacturerModal'));
            viewManufacturerModal = new bootstrap.Modal(document.getElementById('viewManufacturerModal'));
            fetchManufacturers();
        });

        async function fetchManufacturers() {
            try {
                showLoading(true);
                showError('');
                const response = await fetch(`${MANUFACTURER_API_URL}/AllManufacturers`);

                if (!response.ok) throw new Error(`HTTP error! status: ${response.status}`);

                allManufacturers = await response.json();
                renderManufacturersTable(allManufacturers);
                showLoading(false);
            } catch (error) {
                console.error('Error loading manufacturers:', error);
                showError('Failed to load manufacturers: ' + error.message);
                showLoading(false);
            }
        }

        function renderManufacturersTable(manufacturers) {
            const tbody = document.getElementById('manufacturersTableBody');
            tbody.innerHTML = '';

            if (manufacturers && manufacturers.length > 0) {
                manufacturers.forEach(manufacturer => {
                    const meterBadge = manufacturer.meterCount > 0
                        ? `<span class="badge bg-success">${manufacturer.meterCount}</span>`
                        : `<span class="badge bg-secondary">0</span>`;

                    const rowHtml = `
                        <tr>
                            <td><strong>${manufacturer.manufacturerId}</strong></td>
                            <td>${manufacturer.name}</td>
                            <td>${meterBadge}</td>
                            <td>
                                <button class="btn btn-sm btn-outline-success me-1" onclick="viewManufacturerDetails(${manufacturer.manufacturerId})" title="View Details">
                                    <i class="bi bi-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-success me-1" onclick="editManufacturer(${manufacturer.manufacturerId})" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" onclick="deleteManufacturer(${manufacturer.manufacturerId}, '${manufacturer.name}')" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    `;
                    tbody.insertAdjacentHTML('beforeend', rowHtml);
                });
            } else {
                tbody.innerHTML = '<tr><td colspan="4" class="text-center">No manufacturers found. Click "Add Manufacturer" to create one.</td></tr>';
            }
        }

        function prepareAddManufacturer() {
            document.getElementById('manufacturerModalLabel').textContent = 'Add Manufacturer';
            document.getElementById('manufacturerForm').reset();
            document.getElementById('isEdit').value = 'false';
            document.getElementById('manufacturerId').value = '0';
        }

        async function editManufacturer(manufacturerId) {
            const manufacturer = allManufacturers.find(m => m.manufacturerId === manufacturerId);
            if (!manufacturer) {
                showError('Manufacturer not found');
                return;
            }

            document.getElementById('manufacturerModalLabel').textContent = 'Edit Manufacturer';
            document.getElementById('isEdit').value = 'true';
            document.getElementById('manufacturerId').value = manufacturer.manufacturerId;
            document.getElementById('name').value = manufacturer.name;

            manufacturerModal.show();
        }

        async function saveManufacturer() {
            const isEdit = document.getElementById('isEdit').value === 'true';
            const manufacturerId = parseInt(document.getElementById('manufacturerId').value);
            const name = document.getElementById('name').value.trim();

            if (!name) {
                showError('Please enter manufacturer name');
                return;
            }

            if (name.length > 100) {
                showError('Manufacturer name must be 100 characters or less');
                return;
            }

            const manufacturerData = {
                manufacturerId: isEdit ? manufacturerId : null,
                name: name
            };

            const endpoint = isEdit ? `${MANUFACTURER_API_URL}/Update` : `${MANUFACTURER_API_URL}/Create`;
            const method = isEdit ? 'PUT' : 'POST';

            try {
                const response = await fetch(endpoint, {
                    method: method,
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(manufacturerData),
                });

                if (response.ok) {
                    manufacturerModal.hide();
                    showSuccess(isEdit ? 'Manufacturer updated successfully!' : 'Manufacturer created successfully!');
                    await fetchManufacturers();
                } else {
                    const errorText = await response.text();
                    showError(`Failed to save manufacturer: ${errorText}`);
                }
            } catch (error) {
                console.error('Error saving manufacturer:', error);
                showError('An error occurred while saving the manufacturer.');
            }
        }

        async function deleteManufacturer(manufacturerId, name) {
            if (!confirm(`Are you sure you want to delete manufacturer "${name}"?`)) {
                return;
            }

            try {
                const response = await fetch(`${MANUFACTURER_API_URL}/${manufacturerId}`, {
                    method: 'DELETE',
                });

                if (response.ok) {
                    showSuccess('Manufacturer deleted successfully!');
                    await fetchManufacturers();
                } else {
                    const errorText = await response.text();
                    showError(`Failed to delete manufacturer: ${errorText}`);
                }
            } catch (error) {
                console.error('Error deleting manufacturer:', error);
                showError('An error occurred while deleting the manufacturer.');
            }
        }

        function viewManufacturerDetails(manufacturerId) {
            const manufacturer = allManufacturers.find(m => m.manufacturerId === manufacturerId);
            if (!manufacturer) {
                showError('Manufacturer not found');
                return;
            }

            document.getElementById('viewManufacturerId').textContent = manufacturer.manufacturerId;
            document.getElementById('viewName').textContent = manufacturer.name;
            document.getElementById('viewMeterCount').innerHTML = manufacturer.meterCount > 0
                ? `<span class="badge bg-success">${manufacturer.meterCount}</span>`
                : `<span class="badge bg-secondary">0</span>`;

            viewManufacturerModal.show();
        }

        function showLoading(show) {
            document.getElementById('loadingIndicator').style.display = show ? 'block' : 'none';
        }

        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            const errorText = document.getElementById('errorText');
            if (message) {
                errorText.textContent = message;
                errorDiv.style.display = 'block';
                setTimeout(() => { errorDiv.style.display = 'none'; }, 5000);
            } else {
                errorDiv.style.display = 'none';
            }
        }

        function showSuccess(message) {
            const successDiv = document.getElementById('successMessage');
            const successText = document.getElementById('successText');
            if (message) {
                successText.textContent = message;
                successDiv.style.display = 'block';
                setTimeout(() => { successDiv.style.display = 'none'; }, 3000);
            } else {
                successDiv.style.display = 'none';
            }
        }
    </script>
}