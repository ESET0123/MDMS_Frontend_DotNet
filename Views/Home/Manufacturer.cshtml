        font-weight: 600;
        white-space: nowrap;
        border-bottom: 2px solid #e9ecef;
        padding: 1rem;
    }

    .table td {
        padding: 1rem;
        vertical-align: middle;
    }

    .table-hover tbody tr {
        transition: all 0.2s ease;
    }

        .table-hover tbody tr:hover {
            background-color: rgba(25, 135, 84, 0.08) !important;
            transform: translateX(2px);
        }

