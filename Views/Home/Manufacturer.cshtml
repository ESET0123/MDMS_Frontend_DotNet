@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manufacturer Management";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">
                <i class="bi bi-building text-success me-2"></i>Manufacturer Management
            </h2>
            <p class="text-muted mb-0">Manage electricity meter manufacturers and their products</p>
        </div>
        <button class="btn btn-success px-4" data-bs-toggle="modal" data-bs-target="#manufacturerModal" onclick="prepareAddManufacturer()">
            <i class="bi bi-plus-circle me-2"></i> Add Manufacturer
        </button>
    </div>

    <!-- Stats Overview -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm bg-success bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted small fw-semibold">TOTAL MANUFACTURERS</h6>
                            <h2 class="card-title mb-0 text-dark fw-bold" id="totalManufacturers">0</h2>
                        </div>
                        <div class="text-success">
                            <i class="bi bi-building fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm bg-info bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted small fw-semibold">ACTIVE METERS</h6>
                            <h2 class="card-title mb-0 text-dark fw-bold" id="totalMeters">0</h2>
                        </div>
                        <div class="text-info">
                            <i class="bi bi-lightning-charge fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm bg-warning bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted small fw-semibold">TOP MANUFACTURER</h6>
                            <h2 class="card-title mb-0 text-dark fw-bold" id="topManufacturer">-</h2>
                        </div>
                        <div class="text-warning">
                            <i class="bi bi-trophy fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm bg-primary bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted small fw-semibold">AVG METERS PER MFG</h6>
                            <h2 class="card-title mb-0 text-dark fw-bold" id="avgMeters">0</h2>
                        </div>
                        <div class="text-primary">
                            <i class="bi bi-graph-up fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-light py-3">
            <h6 class="mb-0 fw-semibold">
                <i class="bi bi-funnel me-2 text-success"></i>Search & Filter
            </h6>
        </div>
        <div class="card-body">
            <div class="row g-4 align-items-end">
                <div class="col-xl-6 col-md-8">
                    <label for="searchFilter" class="form-label small fw-semibold text-muted">SEARCH MANUFACTURERS</label>
                    <div class="input-group">
                        <span class="input-group-text bg-success bg-opacity-10 text-success">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control" id="searchFilter" placeholder="Search by manufacturer name...">
                    </div>
                </div>
                <div class="col-xl-3 col-md-2">
                    <div class="form-check form-switch mt-3">
                        <input class="form-check-input" type="checkbox" id="showWithMetersOnly" onchange="applyFilters()">
                        <label class="form-check-label small fw-semibold text-muted" for="showWithMetersOnly">
                            With Meters Only
                        </label>
                    </div>
                </div>
                <div class="col-xl-3 col-md-2">
                    <div class="d-grid">
                        <button class="btn btn-outline-secondary" onclick="clearFilters()">
                            <i class="bi bi-arrow-clockwise me-2"></i> Clear
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Loading Indicator -->
    <div id="loadingIndicator" class="text-center my-5 py-5">
        <div class="spinner-border text-success" style="width: 3rem; height: 3rem;" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Loading manufacturers data...</p>
    </div>

    <!-- Messages -->
    <div id="errorMessage" class="alert alert-danger border-0 shadow-sm mb-4" style="display: none;">
        <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-3 fs-5"></i>
            <div>
                <h6 class="alert-heading mb-1">Operation Failed</h6>
                <span id="errorText" class="small"></span>
            </div>
        </div>
    </div>

    <div id="successMessage" class="alert alert-success border-0 shadow-sm mb-4" style="display: none;">
        <div class="d-flex align-items-center">
            <i class="bi bi-check-circle-fill me-3 fs-5"></i>
            <div>
                <h6 class="alert-heading mb-1">Success</h6>
                <span id="successText" class="small"></span>
            </div>
        </div>
    </div>

    <!-- Manufacturers Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-light py-3 d-flex justify-content-between align-items-center">
            <h6 class="mb-0 fw-semibold">
                <i class="bi bi-table me-2 text-success"></i>Manufacturers List
            </h6>
            <span class="badge bg-success bg-opacity-10 text-success" id="manufacturersCount">0 manufacturers</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Manufacturer ID</th>
                            <th>Manufacturer Details</th>
                            <th>Meter Statistics</th>
                            <th class="text-center pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="manufacturersTableBody">
                        <tr>
                            <td colspan="4" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="bi bi-building display-6 text-light"></i>
                                    <p class="mt-3">No manufacturers found</p>
                                    <button class="btn btn-success mt-2" data-bs-toggle="modal" data-bs-target="#manufacturerModal" onclick="prepareAddManufacturer()">
                                        <i class="bi bi-plus-circle me-2"></i> Add First Manufacturer
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add/Edit Manufacturer Modal -->
<div class="modal fade" id="manufacturerModal" tabindex="-1" aria-labelledby="manufacturerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="manufacturerModalLabel">
                    <i class="bi bi-plus-circle me-2"></i>Add Manufacturer
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <form id="manufacturerForm">
                    <input type="hidden" id="isEdit" value="false" />
                    <input type="hidden" id="manufacturerId" value="0" />

                    <!-- Manufacturer Information -->
                    <div class="mb-4">
                        <h6 class="fw-semibold text-muted mb-3 border-bottom pb-2">
                            <i class="bi bi-building me-2"></i>Manufacturer Information
                        </h6>
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label for="name" class="form-label fw-semibold">Manufacturer Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="name" placeholder="e.g., Siemens, ABB, Schneider Electric" required>
                                <small class="form-text text-muted">Enter the name of the meter manufacturer</small>
                            </div>
                        </div>
                    </div>

                    <!-- Form Validation Alert -->
                    <div class="alert alert-info border-0">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-lightbulb me-3 fs-4"></i>
                            <div>
                                <h6 class="alert-heading mb-1">Quick Tips</h6>
                                <p class="mb-0 small">Ensure manufacturer name is unique and descriptive. This will help identify meters from different manufacturers.</p>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success px-4" onclick="saveManufacturer()">
                    <i class="bi bi-save me-2"></i> Save Manufacturer
                </button>
            </div>
        </div>
    </div>
</div>

<!-- View Manufacturer Details Modal -->
<div class="modal fade" id="viewManufacturerModal" tabindex="-1" aria-labelledby="viewManufacturerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="viewManufacturerModalLabel">
                    <i class="bi bi-eye me-2"></i>Manufacturer Details
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="manufacturer-details">
                    <div class="detail-item mb-3">
                        <div class="detail-label small text-muted">MANUFACTURER ID</div>
                        <div class="detail-value fw-bold" id="viewManufacturerId">-</div>
                    </div>
                    <div class="detail-item mb-3">
                        <div class="detail-label small text-muted">MANUFACTURER NAME</div>
                        <div class="detail-value fw-bold" id="viewName">-</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label small text-muted">METER COUNT</div>
                        <div class="detail-value">
                            <div class="d-flex align-items-center">
                                <span class="badge bg-success fs-6 me-2" id="viewMeterCount">0</span>
                                <span class="text-muted small">meters deployed</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const MANUFACTURER_API_URL = `${API_BASE_URL}/api/Manufacturer`;

        let allManufacturers = [];
        let filteredManufacturers = [];
        let manufacturerModal;
        let viewManufacturerModal;

        document.addEventListener('DOMContentLoaded', function() {
            manufacturerModal = new bootstrap.Modal(document.getElementById('manufacturerModal'));
            viewManufacturerModal = new bootstrap.Modal(document.getElementById('viewManufacturerModal'));

            // Add search filter event listener
            document.getElementById('searchFilter').addEventListener('input', applyFilters);

            fetchManufacturers();
        });

        function updateStats(manufacturers) {
            const total = manufacturers.length;
            const totalMeters = manufacturers.reduce((sum, mfg) => sum + (mfg.meterCount || 0), 0);
            const avgMeters = total > 0 ? Math.round(totalMeters / total) : 0;

            // Find top manufacturer
            const topManufacturer = manufacturers.reduce((top, mfg) => {
                return (!top || mfg.meterCount > top.meterCount) ? mfg : top;
            }, null);

            document.getElementById('totalManufacturers').textContent = total;
            document.getElementById('totalMeters').textContent = totalMeters;
            document.getElementById('topManufacturer').textContent = topManufacturer ? topManufacturer.name.substring(0, 12) + (topManufacturer.name.length > 12 ? '...' : '') : '-';
            document.getElementById('avgMeters').textContent = avgMeters;
            document.getElementById('manufacturersCount').textContent = `${filteredManufacturers.length} manufacturer${filteredManufacturers.length !== 1 ? 's' : ''}`;
        }

        function applyFilters() {
            const searchFilter = document.getElementById('searchFilter').value.toLowerCase();
            const showWithMetersOnly = document.getElementById('showWithMetersOnly').checked;

            filteredManufacturers = allManufacturers.filter(manufacturer => {
                // Search filter
                const searchMatch = !searchFilter ||
                    manufacturer.name.toLowerCase().includes(searchFilter) ||
                    manufacturer.manufacturerId.toString().includes(searchFilter);

                // Meter count filter
                const meterMatch = !showWithMetersOnly || manufacturer.meterCount > 0;

                return searchMatch && meterMatch;
            });

            updateStats(filteredManufacturers);
            renderManufacturersTable(filteredManufacturers);
        }

        function clearFilters() {
            document.getElementById('searchFilter').value = '';
            document.getElementById('showWithMetersOnly').checked = false;
            applyFilters();
        }

        async function fetchManufacturers() {
            try {
                showLoading(true);
                showError('');
                const response = await fetch(`${MANUFACTURER_API_URL}/AllManufacturers`);

                if (!response.ok) throw new Error(`HTTP error! status: ${response.status}`);

                allManufacturers = await response.json();
                filteredManufacturers = [...allManufacturers];
                updateStats(filteredManufacturers);
                applyFilters();
                showLoading(false);
            } catch (error) {
                console.error('Error loading manufacturers:', error);
                showError('Failed to load manufacturers: ' + error.message);
                showLoading(false);
            }
        }

        function getMeterStatusClass(meterCount) {
            if (meterCount === 0) return 'bg-secondary';
            if (meterCount <= 5) return 'bg-info';
            if (meterCount <= 20) return 'bg-success';
            return 'bg-primary';
        }

        function getMeterStatusText(meterCount) {
            if (meterCount === 0) return 'No meters';
            if (meterCount === 1) return '1 meter';
            return `${meterCount} meters`;
        }

        function renderManufacturersTable(manufacturers) {
            const tbody = document.getElementById('manufacturersTableBody');
            tbody.innerHTML = '';

            if (manufacturers && manufacturers.length > 0) {
                manufacturers.forEach(manufacturer => {
                    const meterStatusClass = getMeterStatusClass(manufacturer.meterCount);
                    const meterStatusText = getMeterStatusText(manufacturer.meterCount);

                    const rowHtml = `
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-dark">MFG${manufacturer.manufacturerId.toString().padStart(3, '0')}</div>
                                <small class="text-muted">ID: ${manufacturer.manufacturerId}</small>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-sm bg-light rounded-circle d-flex align-items-center justify-content-center me-3">
                                        <i class="bi bi-building text-muted"></i>
                                    </div>
                                    <div>
                                        <div class="fw-semibold">${manufacturer.name}</div>
                                        <div class="small text-muted">
                                            <i class="bi bi-clock me-1"></i>Added recently
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="meter-stats">
                                    <span class="badge ${meterStatusClass}">
                                        <i class="bi bi-lightning-charge me-1"></i>${meterStatusText}
                                    </span>
                                    ${manufacturer.meterCount > 0 ? `
                                    <div class="mt-1">
                                        <small class="text-muted">Active in system</small>
                                    </div>
                                    ` : `
                                    <div class="mt-1">
                                        <small class="text-muted">No meters assigned</small>
                                    </div>
                                    `}
                                </div>
                            </td>
                            <td class="text-center pe-4">
                                <div class="btn-group btn-group-sm">
                                    <button class="btn btn-outline-success" onclick="viewManufacturerDetails(${manufacturer.manufacturerId})" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    <button class="btn btn-outline-success" onclick="editManufacturer(${manufacturer.manufacturerId})" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-outline-danger" onclick="deleteManufacturer(${manufacturer.manufacturerId}, '${manufacturer.name}')" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    `;
                    tbody.insertAdjacentHTML('beforeend', rowHtml);
                });
            } else {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="4" class="text-center py-5">
                            <div class="text-muted">
                                <i class="bi bi-building display-6 text-light"></i>
                                <p class="mt-3">No manufacturers found matching your filters</p>
                                <button class="btn btn-outline-success mt-2" onclick="clearFilters()">
                                    <i class="bi bi-arrow-clockwise me-2"></i> Clear Filters
                                </button>
                            </div>
                        </td>
                    </tr>`;
            }
        }

        function prepareAddManufacturer() {
            document.getElementById('manufacturerModalLabel').innerHTML = '<i class="bi bi-plus-circle me-2"></i>Add Manufacturer';
            document.getElementById('manufacturerForm').reset();
            document.getElementById('isEdit').value = 'false';
            document.getElementById('manufacturerId').value = '0';
        }

        async function editManufacturer(manufacturerId) {
            const manufacturer = allManufacturers.find(m => m.manufacturerId === manufacturerId);
            if (!manufacturer) {
                showError('Manufacturer not found');
                return;
            }

            document.getElementById('manufacturerModalLabel').innerHTML = '<i class="bi bi-pencil me-2"></i>Edit Manufacturer';
            document.getElementById('isEdit').value = 'true';
            document.getElementById('manufacturerId').value = manufacturer.manufacturerId;
            document.getElementById('name').value = manufacturer.name;

            manufacturerModal.show();
        }

        async function saveManufacturer() {
            const isEdit = document.getElementById('isEdit').value === 'true';
            const manufacturerId = parseInt(document.getElementById('manufacturerId').value);
            const name = document.getElementById('name').value.trim();

            if (!name) {
                showError('Please enter manufacturer name');
                return;
            }

            if (name.length > 100) {
                showError('Manufacturer name must be 100 characters or less');
                return;
            }

            // Check for duplicate names
            const duplicate = allManufacturers.find(m =>
                m.name.toLowerCase() === name.toLowerCase() &&
                (!isEdit || m.manufacturerId !== manufacturerId)
            );

            if (duplicate) {
                showError(`Manufacturer "${name}" already exists`);
                return;
            }

            const manufacturerData = {
                manufacturerId: isEdit ? manufacturerId : null,
                name: name
            };

            const endpoint = isEdit ? `${MANUFACTURER_API_URL}/Update` : `${MANUFACTURER_API_URL}/Create`;
            const method = isEdit ? 'PUT' : 'POST';

            try {
                const response = await fetch(endpoint, {
                    method: method,
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(manufacturerData),
                });

                if (response.ok) {
                    manufacturerModal.hide();
                    showSuccess(isEdit ? 'Manufacturer updated successfully!' : 'Manufacturer created successfully!');
                    await fetchManufacturers();
                } else {
                    const errorText = await response.text();
                    showError(`Failed to save manufacturer: ${errorText}`);
                }
            } catch (error) {
                console.error('Error saving manufacturer:', error);
                showError('An error occurred while saving the manufacturer.');
            }
        }

        async function deleteManufacturer(manufacturerId, name) {
            const manufacturer = allManufacturers.find(m => m.manufacturerId === manufacturerId);

            if (manufacturer?.meterCount > 0) {
                showError(`Cannot delete manufacturer "${name}" because it has ${manufacturer.meterCount} meter(s) assigned. Please reassign or delete the meters first.`);
                return;
            }

            if (!confirm(`Are you sure you want to delete manufacturer "${name}"?\n\nThis action cannot be undone.`)) {
                return;
            }

            try {
                const response = await fetch(`${MANUFACTURER_API_URL}/${manufacturerId}`, {
                    method: 'DELETE',
                });

                if (response.ok) {
                    showSuccess('Manufacturer deleted successfully!');
                    await fetchManufacturers();
                } else {
                    const errorText = await response.text();
                    showError(`Failed to delete manufacturer: ${errorText}`);
                }
            } catch (error) {
                console.error('Error deleting manufacturer:', error);
                showError('An error occurred while deleting the manufacturer.');
            }
        }

        function viewManufacturerDetails(manufacturerId) {
            const manufacturer = allManufacturers.find(m => m.manufacturerId === manufacturerId);
            if (!manufacturer) {
                showError('Manufacturer not found');
                return;
            }

            document.getElementById('viewManufacturerId').textContent = `MFG${manufacturer.manufacturerId.toString().padStart(3, '0')}`;
            document.getElementById('viewName').textContent = manufacturer.name;
            document.getElementById('viewMeterCount').textContent = manufacturer.meterCount || 0;

            viewManufacturerModal.show();
        }

        function showLoading(show) {
            document.getElementById('loadingIndicator').style.display = show ? 'block' : 'none';
        }

        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            const errorText = document.getElementById('errorText');
            if (message) {
                errorText.textContent = message;
                errorDiv.style.display = 'block';
                setTimeout(() => { errorDiv.style.display = 'none'; }, 5000);
            } else {
                errorDiv.style.display = 'none';
            }
        }

        function showSuccess(message) {
            const successDiv = document.getElementById('successMessage');
            const successText = document.getElementById('successText');
            if (message) {
                successText.textContent = message;
                successDiv.style.display = 'block';
                setTimeout(() => { successDiv.style.display = 'none'; }, 3000);
            } else {
                successDiv.style.display = 'none';
            }
        }
    </script>
}

<style>
