                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2 text-muted">Total Meters</h6>
                                <h2 class="card-title mb-0 text-dark" id="totalMeters">0</h2>
                            </div>
                            <div class="text-success">
                                <i class="bi bi-lightning-charge fs-1"></i>
                            </div>
                        </div>
                        <div class="mt-2">
                            <small class="text-muted">Click to view all <i class="bi bi-arrow-right"></i></small>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="@Url.Action("User", "Home")" class="text-decoration-none">
                <div class="card shadow-sm border-start border-success border-4 card-clickable">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2 text-muted">Active Users</h6>
                                <h2 class="card-title mb-0 text-dark" id="activeUsers">0</h2>
                            </div>
                            <div class="text-success">
                                <i class="bi bi-people fs-1"></i>
                            </div>
                        </div>
                        <div class="mt-2">
                            <small class="text-muted">Click to view all <i class="bi bi-arrow-right"></i></small>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="@Url.Action("Tariff", "Home")" class="text-decoration-none">
                <div class="card shadow-sm border-start border-info border-4 card-clickable">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2 text-muted">Tariff Plans</h6>
                                <h2 class="card-title mb-0 text-dark" id="totalTariffs">0</h2>
                            </div>
                            <div class="text-info">
                                <i class="bi bi-receipt fs-1"></i>
                            </div>
                        </div>
                        <div class="mt-2">
                            <small class="text-muted">Click to view all <i class="bi bi-arrow-right"></i></small>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="@Url.Action("Consumer", "Home")" class="text-decoration-none">
                <div class="card shadow-sm border-start border-danger border-4 card-clickable">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2 text-muted">Total Consumers</h6>
                                <h2 class="card-title mb-0 text-dark" id="totalConsumers">0</h2>
                            </div>
                            <div class="text-danger">
                                <i class="bi bi-person-badge fs-1"></i>
                            </div>
                        </div>
                        <div class="mt-2">
                            <small class="text-muted">Click to view all <i class="bi bi-arrow-right"></i></small>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <div id="additionalStats" class="row g-4 mt-2" style="display: none;">
        <div class="col-md-3">
            <a href="@Url.Action("Consumer", "Home")" class="text-decoration-none">
                <div class="card shadow-sm border-start border-success border-4 card-clickable">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2 text-muted">Active Consumers</h6>
                                <h2 class="card-title mb-0 text-dark" id="activeConsumers">0</h2>
                            </div>
                            <div class="text-success">
                                <i class="bi bi-person-check fs-1"></i>
                            </div>
                        </div>
                        <div class="mt-2">
                            <small class="text-muted">Click to view all <i class="bi bi-arrow-right"></i></small>
