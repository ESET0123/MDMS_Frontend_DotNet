        </div>
        <div class="col-md-3">
            <a href="@Url.Action("Manufacturer", "Home")" class="text-decoration-none">
                <div class="card shadow-sm border-start border-secondary border-4 card-clickable">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2 text-muted">Manufacturers</h6>
                                <h2 class="card-title mb-0 text-dark" id="totalManufacturers">0</h2>
                            </div>
                            <div class="text-secondary">
                                <i class="bi bi-building fs-1"></i>
                            </div>
                        </div>
                        <div class="mt-2">
                            <small class="text-muted">Click to view all <i class="bi bi-arrow-right"></i></small>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="@Url.Action("Dtr", "Home")" class="text-decoration-none">
                <div class="card shadow-sm border-start border-success border-4 card-clickable">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2 text-muted">DTRs</h6>
                                <h2 class="card-title mb-0 text-dark" id="totalDtrs">0</h2>
                            </div>
                            <div class="text-success">
                                <i class="bi bi-router fs-1"></i>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </a>
        </div>
    </div>

    <div id="recentActivity" class="row mt-4" style="display: none;">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Recent Consumers</h5>
                    <span class="badge bg-light text-success">Latest 5</span>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Created</th>
                                </tr>
                            </thead>
                            <tbody id="recentConsumersTable">
                                <tr>
                                    <td colspan="3" class="text-center text-muted">Loading...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-light text-center">
                    <a href="@Url.Action("Consumer", "Home")" class="btn btn-sm btn-outline-success">
                        <i class="bi bi-arrow-right-circle me-1"></i> See More Consumers
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-person-plus me-2"></i>Recent Users</h5>
                    <span class="badge bg-light text-success">Latest 5</span>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                </tr>
                            </thead>
                            <tbody id="recentUsersTable">
                                <tr>
                                    <td colspan="3" class="text-center text-muted">Loading...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-light text-center">
                    <a href="@Url.Action("User", "Home")" class="btn btn-sm btn-outline-success">
                        <i class="bi bi-arrow-right-circle me-1"></i> See More Users
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const API_BASE_URL = '@Configuration["ApiBaseUrl"]';
        const DASHBOARD_API_URL = `${API_BASE_URL}/api/Dashboard`;

        document.addEventListener('DOMContentLoaded', function() {
            fetchDashboardData();
        });

        async function fetchDashboardData() {
            await fetchStatistics();
            await fetchRecentActivity();
        }

        async function fetchStatistics() {
            try {
                const response = await fetch(`${DASHBOARD_API_URL}/Statistics`);

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();

                animateValue('totalMeters', 0, data.totalMeters, 1000);
                animateValue('activeUsers', 0, data.activeUsers, 1000);
                animateValue('totalTariffs', 0, data.totalTariffs, 1000);
                animateValue('totalConsumers', 0, data.totalConsumers, 1000);
                animateValue('activeConsumers', 0, data.activeConsumers, 1000);
                animateValue('totalManufacturers', 0, data.totalManufacturers, 1000);
                animateValue('totalDtrs', 0, data.totalDtrs, 1000);

                document.getElementById('loadingIndicator').style.display = 'none';
                document.getElementById('statisticsCards').style.display = 'flex';
                document.getElementById('additionalStats').style.display = 'flex';

            } catch (error) {
                console.error('Error fetching statistics:', error);
                document.getElementById('loadingIndicator').innerHTML =
                    '<div class="alert alert-danger">Failed to load dashboard statistics</div>';
            }
        }

        async function fetchRecentActivity() {
            try {
                const response = await fetch(`${DASHBOARD_API_URL}/RecentActivity`);

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();

                const consumersTable = document.getElementById('recentConsumersTable');
                if (data.recentConsumers && data.recentConsumers.length > 0) {
                    consumersTable.innerHTML = data.recentConsumers.map(consumer => `
                        <tr>
                            <td><strong>${consumer.name}</strong></td>
                            <td>${consumer.email}</td>
                            <td><small class="text-muted">${new Date(consumer.createdAt).toLocaleDateString()}</small></td>
                        </tr>
                    `).join('');
                } else {
                    consumersTable.innerHTML = '<tr><td colspan="3" class="text-center text-muted">No recent consumers</td></tr>';
                }

                const usersTable = document.getElementById('recentUsersTable');
                if (data.recentUsers && data.recentUsers.length > 0) {
                    usersTable.innerHTML = data.recentUsers.map(user => `
                        <tr>
                            <td><strong>${user.username}</strong></td>
                            <td>${user.email}</td>
                            <td><span class="badge bg-success">${user.roleName}</span></td>
                        </tr>
                    `).join('');
                } else {
                    usersTable.innerHTML = '<tr><td colspan="3" class="text-center text-muted">No recent users</td></tr>';
                }

                document.getElementById('recentActivity').style.display = 'flex';

            } catch (error) {
                console.error('Error fetching recent activity:', error);
            }
        }

        function animateValue(id, start, end, duration) {
            const element = document.getElementById(id);
            const range = end - start;
            const increment = range / (duration / 16);
            let current = start;

            const timer = setInterval(() => {
                current += increment;
                if ((increment > 0 && current >= end) || (increment < 0 && current <= end)) {
                    current = end;
                    clearInterval(timer);
                }
                element.textContent = Math.floor(current).toLocaleString();
            }, 16);
        }

        setInterval(fetchDashboardData, 300000);
    </script>
}

<style>
    .card-clickable {
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .card-clickable:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    a.text-decoration-none:hover .card-clickable {
        border-color: var(--bs-success) !important;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
    }

    .card-footer .btn:hover {
        transform: translateX(5px);
        transition: transform 0.2s ease;
    }
</style>