@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid ">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 mb-3">Welcome 🎉</h1>
            <p class="text-muted fs-5">This is your main dashboard after login.</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Total Meters</h6>
                            <h2 class="card-title mb-0">1,234</h2>
                        </div>
                        <div class="text-primary">
                            <i class="bi bi-speedometer2 fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Active Users</h6>
                            <h2 class="card-title mb-0">456</h2>
                        </div>
                        <div class="text-success">
                            <i class="bi bi-people fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Org Units</h6>
                            <h2 class="card-title mb-0">89</h2>
                        </div>
                        <div class="text-warning">
                            <i class="bi bi-building fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Tariff Plans</h6>
                            <h2 class="card-title mb-0">12</h2>
                        </div>
                        <div class="text-info">
                            <i class="bi bi-tags fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>