@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    ViewData["Title"] = "Upload Meter Data";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Meter Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/PapaParse/5.4.1/papaparse.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
            padding: 0;
        }

        .upload-zone {
            border: 2px dashed #dee2e6;
            border-radius: 8px;
            padding: 40px 20px;
            text-align: center;
            transition: all 0.3s;
            cursor: pointer;
            background-color: #fff;
        }

            .upload-zone:hover {
                border-color: #0d6efd;
                background-color: #f8f9ff;
            }

            .upload-zone.drag-over {
                border-color: #0d6efd;
                background-color: #e7f1ff;
            }

        .file-info {
            margin-top: 15px;
            padding: 15px;
            background-color: #e7f1ff;
            border-radius: 8px;
            border-left: 4px solid #0d6efd;
        }

        .validation-container {
            display: none;
        }

        .validation-loading {
            text-align: center;
            padding: 40px;
        }

        .spinner-custom {
            width: 50px;
            height: 50px;
            border: 4px solid #f3f3f3;
            border-top: 4px solid #0d6efd;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        .data-table-container {
            max-height: 500px;
            overflow-y: auto;
        }

        .table-actions {
            position: sticky;
            top: 0;
            background: white;
            z-index: 10;
            padding: 15px 0;
            border-bottom: 2px solid #dee2e6;
        }

        .row-error {
            background-color: #f8d7da !important;
        }

        .row-valid {
            background-color: #d1e7dd !important;
        }

        .error-container {
            background: linear-gradient(135deg, #fff5f5 0%, #ffe6e6 100%);
            border: 1px solid #f5c6cb;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(220, 53, 69, 0.1);
        }

        .error-header {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 2px solid #f5c6cb;
        }

        .error-icon {
            font-size: 24px;
            color: #dc3545;
            margin-right: 10px;
        }

        .error-summary {
            background: white;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
            border-left: 4px solid #dc3545;
        }

        .error-details {
            max-height: 200px;
            overflow-y: auto;
            background: white;
            border-radius: 8px;
            padding: 15px;
            border: 1px solid #dee2e6;
        }

        .error-item {
            padding: 8px 12px;
            margin-bottom: 5px;
            background: #f8f9fa;
            border-radius: 5px;
            border-left: 3px solid #dc3545;
        }

            .error-item:last-child {
                margin-bottom: 0;
            }

        .progress-item {
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 5px;
            border: 1px solid #dee2e6;
            transition: all 0.3s;
        }

            .progress-item.success {
                background-color: #d1e7dd;
                border-color: #198754;
            }

            .progress-item.failed {
                background-color: #f8d7da;
                border-color: #dc3545;
            }

        .alert-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            max-width: 400px;
        }

        .history-item {
            cursor: pointer;
            transition: background-color 0.2s;
        }

            .history-item:hover {
                background-color: #f8f9fa;
            }

        /* Enhanced Error Display Styles */
        .error-container {
            background: linear-gradient(135deg, #fff5f5 0%, #ffe6e6 100%);
            border: 1px solid #f5c6cb;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(220, 53, 69, 0.1);
        }

        .error-header {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 2px solid #f5c6cb;
        }

        .error-icon {
            font-size: 24px;
            color: #dc3545;
            margin-right: 10px;
        }

        .error-summary {
            background: white;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
            border-left: 4px solid #dc3545;
        }

        .error-details {
            max-height: 200px;
            overflow-y: auto;
            background: white;
            border-radius: 8px;
            padding: 15px;
            border: 1px solid #dee2e6;
        }

        .error-item {
            padding: 8px 12px;
            margin-bottom: 5px;
            background: #f8f9fa;
            border-radius: 5px;
            border-left: 3px solid #dc3545;
        }

            .error-item:last-child {
                margin-bottom: 0;
            }

        /* Modal Styles */
        .modal-content {
            border-radius: 10px;
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .modal-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 10px 10px 0 0;
            border-bottom: none;
        }

        .history-modal-table {
            max-height: 400px;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    <div class="alert-container" id="alertContainer"></div>

    <!-- History Data Modal -->
    <div class="modal fade" id="historyModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-clock-history me-2"></i>
                        Upload History Details
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>File Name:</strong> <span id="modalFileName"></span>
                        </div>
                        <div class="col-md-3">
                            <strong>Upload Date:</strong> <span id="modalUploadDate"></span>
                        </div>
                        <div class="col-md-3">
                            <strong>Records:</strong> <span id="modalRecordCount"></span>
                        </div>
                    </div>
                    <div class="history-modal-table">
                        <table class="table table-striped table-hover">
                            <thead class="table-success">
                                <tr>
                                    <th>#</th>
                                    <th>Consumer ID</th>
                                    <th>DTR ID</th>
                                    <th>IP Address</th>
                                    <th>ICCID</th>
                                    <th>IMSI</th>
                                    <th>Manufacturer ID</th>
                                    <th>Firmware</th>
                                    <th>Tariff ID</th>
                                    <th>Install Date</th>
                                    <th>Status ID</th>
                                    <th>Latest Reading</th>
                                </tr>
                            </thead>
                            <tbody id="modalTableBody">
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <h2 class="mb-4">Upload Meter Data</h2>

        <!-- Upload Section -->
        <div id="uploadSection">
            <div class="row">
                <div class="col-md-8">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <form id="uploadForm">
                                <div class="mb-3">
                                    <label for="fileType" class="form-label">File Type</label>
                                    <select class="form-select" id="fileType" required>
                                        <option value="csv">CSV</option>
                                        <option value="excel">Excel</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Select File</label>
                                    <div class="upload-zone" id="uploadZone">
                                        <i class="bi bi-cloud-upload" style="font-size: 3rem; color: #6c757d;"></i>
                                        <p class="mb-2 mt-3">Drag and drop your file here or click to browse</p>
                                        <input class="form-control d-none" type="file" id="meterFile" accept=".csv,.xlsx,.xls">
                                        <button type="button" class="btn btn-outline-success btn-sm mt-2" onclick="document.getElementById('meterFile').click()">
                                            Browse Files
                                        </button>
                                    </div>
                                    <div id="fileInfo" class="file-info d-none">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <i class="bi bi-file-earmark-text text-success"></i>
                                                <strong id="fileName"></strong>
                                                <span id="fileSize" class="text-muted ms-2"></span>
                                            </div>
                                            <button type="button" class="btn btn-sm btn-danger" id="removeFile">
                                                <i class="bi bi-x-circle"></i> Remove
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-success" id="validateBtn" disabled>
                                    <i class="bi bi-check-circle"></i> Validate & Preview
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Statistics</h5>
                            <div class="d-flex justify-content-between mb-2">
                                <span>File Selected:</span>
                                <strong id="fileStatus">No</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Validation Section -->
        <div id="validationSection" class="validation-container">
            <!-- Validation Loading -->
            <div id="validationLoading" class="validation-loading">
                <div class="spinner-custom mx-auto"></div>
                <p class="mt-3 text-muted">Validating data...</p>
            </div>

            <!-- Validation Results -->
            <div id="validationResults" style="display: none;">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <!-- Enhanced Error Display -->
                        <div id="errorDisplayContainer" style="display: none;">
                            <div class="error-container">
                                <div class="error-header">
                                    <i class="bi bi-exclamation-triangle error-icon"></i>
                                    <h4 class="mb-0 text-danger">Validation Failed</h4>
                                </div>
                                <div class="error-summary">
                                    <p class="mb-2"><strong>We found some issues with your data that need to be fixed before uploading:</strong></p>
                                    <div class="d-flex gap-4">
                                        <span><i class="bi bi-x-circle-fill text-danger"></i> <strong id="errorCount">0</strong> records with errors</span>
                                        <span><i class="bi bi-check-circle-fill text-success"></i> <strong id="validCount">0</strong> valid records</span>
                                        <span><i class="bi bi-file-text"></i> <strong id="totalCount">0</strong> total records</span>
                                    </div>
                                </div>
                                <div class="error-details">
                                    <h6 class="mb-3">Error Details:</h6>
                                    <div id="errorList"></div>
                                </div>
                            </div>
                        </div>

                        <div class="table-actions">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="mb-0">
                                        <span id="dataTitle">Data Preview</span>
                                        <span id="validationBadge"></span>
                                    </h4>
                                    <p class="text-muted mb-0" id="validationSummary"></p>
                                </div>
                                <div>
                                    <button class="btn btn-secondary me-2" id="goBackBtn">
                                        <i class="bi bi-arrow-left"></i> Go Back
                                    </button>
                                    <button class="btn btn-success" id="uploadDataBtn" style="display: none;">
                                        <i class="bi bi-upload"></i> Upload to Database
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="data-table-container mt-3">
                            <table class="table table-striped table-hover" id="dataTable">
                                <thead class="table-light">
                                    <tr>
                                        <th>#</th>
                                        <th>Consumer ID</th>
                                        <th>DTR ID</th>
                                        <th>IP Address</th>
                                        <th>Manufacturer ID</th>
                                        <th>Tariff ID</th>
                                        <th>Install Date</th>
                                        <th>Status ID</th>
                                        <th>Latest Reading</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody id="dataTableBody">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Upload Progress -->
                <div id="uploadProgressSection" class="upload-progress mt-3" style="display: none;">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5>Upload Progress</h5>
                            <div class="progress mb-3">
                                <div class="progress-bar progress-bar-striped progress-bar-animated" id="overallProgress" role="progressbar" style="width: 0%">
                                    0%
                                </div>
                            </div>
                            <div id="progressList"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const API_BASE_URL = '@Configuration["ApiBaseUrl"]';
        let selectedFile = null;
        let parsedData = [];
        let validationResult = null;

        const uploadZone = document.getElementById('uploadZone');
        const fileInput = document.getElementById('meterFile');
        const fileInfo = document.getElementById('fileInfo');
        const fileName = document.getElementById('fileName');
        const fileSize = document.getElementById('fileSize');
        const validateBtn = document.getElementById('validateBtn');
        const uploadForm = document.getElementById('uploadForm');

        // File input handler
        fileInput.addEventListener('change', (e) => {
            console.log('File selected:', e.target.files[0]);
            handleFile(e.target.files[0]);
        });

        // Drag and drop handlers
        uploadZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadZone.classList.add('drag-over');
        });

        uploadZone.addEventListener('dragleave', () => {
            uploadZone.classList.remove('drag-over');
        });

        uploadZone.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadZone.classList.remove('drag-over');
            handleFile(e.dataTransfer.files[0]);
        });

        // Remove file handler
        document.getElementById('removeFile').addEventListener('click', () => {
            resetFileSelection();
        });

        function handleFile(file) {
            if (!file) return;

            const fileType = document.getElementById('fileType').value;
            const validExtensions = {
                csv: ['.csv'],
                excel: ['.xlsx', '.xls']
            };

            const ext = '.' + file.name.split('.').pop().toLowerCase();
            if (!validExtensions[fileType].includes(ext)) {
                showAlert('Invalid file type. Please select a ' + fileType.toUpperCase() + ' file.', 'danger');
                return;
            }

            selectedFile = file;
            fileName.textContent = file.name;
            fileSize.textContent = formatFileSize(file.size);
            fileInfo.classList.remove('d-none');
            validateBtn.disabled = false;
            document.getElementById('fileStatus').textContent = 'Yes';
            console.log('File handled successfully:', file.name);
        }

        function resetFileSelection() {
            selectedFile = null;
            fileInput.value = '';
            fileInfo.classList.add('d-none');
            validateBtn.disabled = true;
            parsedData = [];
            document.getElementById('fileStatus').textContent = 'No';
        }

        // Validate form submission
        uploadForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            if (!selectedFile) return;
            await parseAndValidate();
        });

        async function parseAndValidate() {
            const fileType = document.getElementById('fileType').value;

            // Show validation section
            document.getElementById('uploadSection').style.display = 'none';
            document.getElementById('validationSection').style.display = 'block';
            document.getElementById('validationLoading').style.display = 'block';
            document.getElementById('validationResults').style.display = 'none';
            document.getElementById('errorDisplayContainer').style.display = 'none';

            try {
                // Parse file
                if (fileType === 'csv') {
                    parsedData = await parseCSV(selectedFile);
                } else if (fileType === 'excel') {
                    parsedData = await parseExcel(selectedFile);
                }

                console.log('Parsed data:', parsedData);

                // Convert parsed data to MeterDTO format
                const meterData = parsedData.map(row => ({
                    consumerId: parseInt(row.ConsumerId || row.consumerId),
                    dtrid: parseInt(row.Dtrid || row.dtrid || row.DtrId),
                    ipaddress: row.Ipaddress || row.ipaddress || row.IPAddress,
                    iccid: row.Iccid || row.iccid || row.ICCID || null,
                    imsi: row.Imsi || row.imsi || row.IMSI || null,
                    manufacturerId: parseInt(row.ManufacturerId || row.manufacturerId),
                    firmware: row.Firmware || row.firmware || null,
                    tariffId: parseInt(row.TariffId || row.tariffId),
                    installDate: row.InstallDate || row.installDate,
                    statusId: parseInt(row.StatusId || row.statusId),
                    latestReading: parseFloat(row.LatestReading || row.latestReading || 0)
                }));

                console.log('Converted meter data:', meterData);

                // Validate data
                const response = await fetch(`${API_BASE_URL}/api/Meter/ValidateBulk`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(meterData)
                });

                console.log('Validation response status:', response.status);

                if (!response.ok) {
                    const errorText = await response.text();
                    console.error('Validation error response:', errorText);
                    throw new Error(`Validation failed: ${response.status} - ${errorText}`);
                }

                validationResult = await response.json();
                console.log('Validation result:', validationResult);
                displayValidationResults(validationResult, meterData);

            } catch (error) {
                console.error('Error:', error);
                showAlert('Error processing file: ' + error.message, 'danger');
                goBack();
            }
        }

        function parseCSV(file) {
            return new Promise((resolve, reject) => {
                Papa.parse(file, {
                    header: true,
                    skipEmptyLines: true,
                    complete: (results) => {
                        resolve(results.data);
                    },
                    error: (error) => {
                        reject(error);
                    }
                });
            });
        }

        function parseExcel(file) {
            return new Promise((resolve, reject) => {
                const reader = new FileReader();
                reader.onload = (e) => {
                    try {
                        const data = new Uint8Array(e.target.result);
                        const workbook = XLSX.read(data, { type: 'array' });
                        const firstSheet = workbook.Sheets[workbook.SheetNames[0]];
                        const jsonData = XLSX.utils.sheet_to_json(firstSheet);
                        resolve(jsonData);
                    } catch (error) {
                        reject(error);
                    }
                };
                reader.onerror = reject;
                reader.readAsArrayBuffer(file);
            });
        }

        function displayValidationResults(result, originalData) {
            document.getElementById('validationLoading').style.display = 'none';
            document.getElementById('validationResults').style.display = 'block';

            const isValid = result.isValid;
            const summary = `Total: ${result.totalRecords} | Valid: ${result.validCount} | Invalid: ${result.invalidCount}`;

            document.getElementById('validationSummary').textContent = summary;

            const badge = document.getElementById('validationBadge');
            if (isValid) {
                badge.innerHTML = '<span class="badge bg-success ms-2">All Valid</span>';
                document.getElementById('uploadDataBtn').style.display = 'inline-block';
                document.getElementById('errorDisplayContainer').style.display = 'none';
            } else {
                badge.innerHTML = '<span class="badge bg-danger ms-2">Validation Failed</span>';
                document.getElementById('uploadDataBtn').style.display = 'none';
                showEnhancedErrorDisplay(result);
            }

            // Display table
            const tbody = document.getElementById('dataTableBody');
            tbody.innerHTML = '';

            const allRecords = [
                ...result.validRecords.map((r, i) => ({ data: r, valid: true, errors: [] })),
                ...result.invalidRecords.map(r => ({ data: r.meterData, valid: false, errors: r.errors }))
            ];

            allRecords.forEach((record, index) => {
                const row = document.createElement('tr');
                row.className = record.valid ? 'row-valid' : 'row-error';

                const statusCell = record.valid ?
                    '<span class="badge bg-success">Valid</span>' :
                    `<span class="badge bg-danger">Invalid</span><small class="d-block text-danger mt-1">${record.errors.join(', ')}</small>`;

                row.innerHTML = `
                    <td>${index + 1}</td>
                    <td>${record.data.consumerId}</td>
                    <td>${record.data.dtrid}</td>
                    <td>${record.data.ipaddress}</td>
                    <td>${record.data.manufacturerId}</td>
                    <td>${record.data.tariffId}</td>
                    <td>${new Date(record.data.installDate).toLocaleDateString()}</td>
                    <td>${record.data.statusId}</td>
                    <td>${record.data.latestReading}</td>
                    <td>${statusCell}</td>
                `;
                tbody.appendChild(row);
            });
        }

        function showEnhancedErrorDisplay(result) {
            const errorContainer = document.getElementById('errorDisplayContainer');
            const errorCount = document.getElementById('errorCount');
            const validCount = document.getElementById('validCount');
            const totalCount = document.getElementById('totalCount');
            const errorList = document.getElementById('errorList');

            errorCount.textContent = result.invalidCount;
            validCount.textContent = result.validCount;
            totalCount.textContent = result.totalRecords;

            errorList.innerHTML = '';

            if (result.invalidRecords.length > 0) {
                result.invalidRecords.forEach((record, index) => {
                    const errorItem = document.createElement('div');
                    errorItem.className = 'error-item';
                    errorItem.innerHTML = `<strong>Record ${index + 1}:</strong> ${record.errors.join(', ')}`;
                    errorList.appendChild(errorItem);
                });
            }

            errorContainer.style.display = 'block';
        }

        document.getElementById('goBackBtn').addEventListener('click', goBack);

        function goBack() {
            document.getElementById('uploadSection').style.display = 'block';
            document.getElementById('validationSection').style.display = 'none';
            document.getElementById('uploadProgressSection').style.display = 'none';
            validationResult = null;
        }

        document.getElementById('uploadDataBtn').addEventListener('click', async () => {
            if (!validationResult || !validationResult.validRecords.length) return;

            document.getElementById('uploadDataBtn').disabled = true;
            document.getElementById('goBackBtn').disabled = true;
            document.getElementById('uploadProgressSection').style.display = 'block';

            const progressList = document.getElementById('progressList');
            progressList.innerHTML = '';

            let successCount = 0;
            const total = validationResult.validRecords.length;

            for (let i = 0; i < validationResult.validRecords.length; i++) {
                const meter = validationResult.validRecords[i];
                const progressItem = document.createElement('div');
                progressItem.className = 'progress-item';
                progressItem.innerHTML = `
                    <div class="d-flex justify-content-between">
                        <span>Row ${i + 1}: Consumer ID ${meter.consumerId}</span>
                        <span class="spinner-border spinner-border-sm"></span>
                    </div>
                `;
                progressList.appendChild(progressItem);

                try {
                    const response = await fetch(`${API_BASE_URL}/api/Meter/Create`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(meter)
                    });

                    if (response.ok) {
                        progressItem.className = 'progress-item success';
                        progressItem.innerHTML = `
                            <div class="d-flex justify-content-between">
                                <span>Row ${i + 1}: Consumer ID ${meter.consumerId}</span>
                                <span class="text-success"><i class="bi bi-check-circle-fill"></i> Success</span>
                            </div>
                        `;
                        successCount++;
                    } else {
                        throw new Error('Upload failed');
                    }
                } catch (error) {
                    progressItem.className = 'progress-item failed';
                    progressItem.innerHTML = `
                        <div class="d-flex justify-content-between">
                            <span>Row ${i + 1}: Consumer ID ${meter.consumerId}</span>
                            <span class="text-danger"><i class="bi bi-x-circle-fill"></i> Failed</span>
                        </div>
                    `;
                }

                const progress = ((i + 1) / total) * 100;
                document.getElementById('overallProgress').style.width = progress + '%';
                document.getElementById('overallProgress').textContent = Math.round(progress) + '%';

                await new Promise(resolve => setTimeout(resolve, 200));
            }

            showAlert(`Upload complete! Success: ${successCount}/${total}`, successCount === total ? 'success' : 'warning');

            setTimeout(() => {
                document.getElementById('uploadDataBtn').disabled = false;
                document.getElementById('goBackBtn').disabled = false;
            }, 2000);
        });

        function generateId() {
            return Date.now().toString(36) + Math.random().toString(36).substr(2);
        }

        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
        }

        function showAlert(message, type) {
            const alert = document.createElement('div');
            alert.className = `alert alert-${type} alert-dismissible fade show`;
            alert.innerHTML = `
                        ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    `;

            document.getElementById('alertContainer').appendChild(alert);

            setTimeout(() => {
                alert.remove();
            }, 5000);
        }
    </script>
