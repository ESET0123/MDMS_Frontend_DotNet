<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Enhanced validation error handling
    let selectedFile = null;
    let parsedData = [];
    let validationResult = null;
    let categorizedErrors = {
        critical: [],
        warning: [],
        info: []
    };

    const uploadZone = document.getElementById('uploadZone');
    const fileInput = document.getElementById('meterFile');
    const fileInfo = document.getElementById('fileInfo');
    const fileName = document.getElementById('fileName');
    const fileSize = document.getElementById('fileSize');
    const validateBtn = document.getElementById('validateBtn');
    const uploadForm = document.getElementById('uploadForm');
    const fileTypeSelect = document.getElementById('fileType');
    const currentFileType = document.getElementById('currentFileType');

    // Update file type badge
    fileTypeSelect.addEventListener('change', function() {
        currentFileType.textContent = this.options[this.selectedIndex].text;
    });

    // File input handler
    fileInput.addEventListener('change', (e) => {
        console.log('File selected:', e.target.files[0]);
        handleFile(e.target.files[0]);
    });

    // Drag and drop handlers
    uploadZone.addEventListener('dragover', (e) => {
        e.preventDefault();
        uploadZone.classList.add('drag-over');
    });

    uploadZone.addEventListener('dragleave', () => {
        uploadZone.classList.remove('drag-over');
    });

    uploadZone.addEventListener('drop', (e) => {
        e.preventDefault();
        uploadZone.classList.remove('drag-over');
        handleFile(e.dataTransfer.files[0]);
    });

    // Remove file handler
    document.getElementById('removeFile').addEventListener('click', () => {
        resetFileSelection();
    });

    function handleFile(file) {
        if (!file) return;

        const fileType = document.getElementById('fileType').value;
        const validExtensions = {
            csv: ['.csv'],
            excel: ['.xlsx', '.xls']
        };

        const ext = '.' + file.name.split('.').pop().toLowerCase();
        if (!validExtensions[fileType].includes(ext)) {
            showAlert('Invalid file type. Please select a ' + fileType.toUpperCase() + ' file.', 'danger');
            return;
        }

        selectedFile = file;
        fileName.textContent = file.name;
        fileSize.textContent = formatFileSize(file.size);
        fileInfo.classList.remove('d-none');
        validateBtn.disabled = false;
        document.getElementById('fileStatus').textContent = 'Yes';
        document.getElementById('fileSizeStat').textContent = formatFileSize(file.size);
        console.log('File handled successfully:', file.name);
    }

    function resetFileSelection() {
        selectedFile = null;
        fileInput.value = '';
        fileInfo.classList.add('d-none');
        validateBtn.disabled = true;
        parsedData = [];
        document.getElementById('fileStatus').textContent = 'No';
        document.getElementById('fileSizeStat').textContent = '0 KB';
    }

    // Validate form submission
    uploadForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        if (!selectedFile) return;

        // Update step indicator
        document.getElementById('step1').classList.remove('active');
        document.getElementById('step2').classList.add('active');

        await parseAndValidate();
    });

    async function parseAndValidate() {
        const fileType = document.getElementById('fileType').value;

        // Show validation section
        document.getElementById('uploadSection').style.display = 'none';
        document.getElementById('validationSection').style.display = 'block';
        document.getElementById('validationLoading').style.display = 'block';
        document.getElementById('validationResults').style.display = 'none';
        document.getElementById('errorDisplayContainer').style.display = 'none';

        try {
            // Parse file
            if (fileType === 'csv') {
                parsedData = await parseCSV(selectedFile);
            } else if (fileType === 'excel') {
                parsedData = await parseExcel(selectedFile);
            }

            console.log('Parsed data:', parsedData);

            // Convert parsed data to MeterDTO format
            const meterData = parsedData.map(row => ({
                consumerId: parseInt(row.ConsumerId || row.consumerId),
                dtrid: parseInt(row.Dtrid || row.dtrid || row.DtrId),
                ipaddress: row.Ipaddress || row.ipaddress || row.IPAddress,
                iccid: row.Iccid || row.iccid || row.ICCID || null,
                imsi: row.Imsi || row.imsi || row.IMSI || null,
                manufacturerId: parseInt(row.ManufacturerId || row.manufacturerId),
                firmware: row.Firmware || row.firmware || null,
                tariffId: parseInt(row.TariffId || row.tariffId),
                installDate: row.InstallDate || row.installDate,
                statusId: parseInt(row.StatusId || row.statusId),
                latestReading: parseFloat(row.LatestReading || row.latestReading || 0)
            }));

            console.log('Converted meter data:', meterData);

            // Validate data
            const response = await fetch(`${API_BASE_URL}/api/Meter/ValidateBulk`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(meterData)
            });

            console.log('Validation response status:', response.status);

            if (!response.ok) {
                const errorText = await response.text();
                console.error('Validation error response:', errorText);
                throw new Error(`Validation failed`);
            }

            validationResult = await response.json();
            console.log('Validation result:', validationResult);

            // Enhanced error categorization
            categorizeErrors(validationResult);
            displayValidationResults(validationResult, meterData);

        } catch (error) {
            console.error('Error:', error);
            showAlert('Error processing file: ' + error.message, 'danger');
            goBack();
        }
    }

    function categorizeErrors(validationResult) {
        // Reset categories
        categorizedErrors = {
            critical: [],
            warning: [],
            info: []
        };

        if (!validationResult.invalidRecords) return;

        validationResult.invalidRecords.forEach(record => {
            record.errors.forEach(error => {
                const errorDetail = {
                    rowNumber: record.rowNumber || 'Unknown',
                    field: getFieldFromError(error),
                    message: error,
                    suggestion: getSuggestionForError(error),
                    severity: getErrorSeverity(error),
                    recordData: record.meterData
                };

                categorizedErrors[errorDetail.severity].push(errorDetail);
            });
        });

        console.log('Categorized errors:', categorizedErrors);
    }

    function getFieldFromError(error) {
        const fieldMap = {
            'ConsumerId': 'Consumer ID',
            'DtrId': 'DTR ID',
            'IpAddress': 'IP Address',
            'ManufacturerId': 'Manufacturer ID',
            'TariffId': 'Tariff ID',
            'InstallDate': 'Install Date',
            'StatusId': 'Status ID',
            'LatestReading': 'Latest Reading'
        };

        for (const [field, displayName] of Object.entries(fieldMap)) {
            if (error.toLowerCase().includes(field.toLowerCase())) {
                return displayName;
            }
        }

        return 'Unknown Field';
    }

    function getErrorSeverity(error) {
        const criticalKeywords = ['required', 'missing', 'invalid', 'duplicate', 'not found'];
        const warningKeywords = ['format', 'suggestion', 'recommend', 'optional'];

        const lowerError = error.toLowerCase();

        if (criticalKeywords.some(keyword => lowerError.includes(keyword))) {
            return 'critical';
        } else if (warningKeywords.some(keyword => lowerError.includes(keyword))) {
            return 'warning';
        } else {
            return 'info';
        }
    }

    function getSuggestionForError(error) {
        const suggestions = {
            'required': 'This field is mandatory and cannot be empty',
            'invalid format': 'Please check the format of this field',
            'duplicate': 'This value already exists in the system',
            'not found': 'The referenced value does not exist in the system',
            'date format': 'Please use YYYY-MM-DD format for dates',
            'numeric': 'This field should contain only numbers',
            'ip address': 'Please provide a valid IP address format'
        };

        const lowerError = error.toLowerCase();
        for (const [key, suggestion] of Object.entries(suggestions)) {
            if (lowerError.includes(key)) {
                return suggestion;
            }
        }

        return 'Please review this field and ensure it meets the required criteria';
    }

    function parseCSV(file) {
        return new Promise((resolve, reject) => {
            Papa.parse(file, {
                header: true,
                skipEmptyLines: true,
                complete: (results) => {
                    resolve(results.data);
                },
                error: (error) => {
                    reject(error);
                }
            });
        });
    }

    function parseExcel(file) {
        return new Promise((resolve, reject) => {
            const reader = new FileReader();
            reader.onload = (e) => {
                try {
                    const data = new Uint8Array(e.target.result);
                    const workbook = XLSX.read(data, { type: 'array' });
                    const firstSheet = workbook.Sheets[workbook.SheetNames[0]];
                    const jsonData = XLSX.utils.sheet_to_json(firstSheet);
                    resolve(jsonData);
                } catch (error) {
                    reject(error);
                }
            };
            reader.onerror = reject;
            reader.readAsArrayBuffer(file);
        });
    }

    function displayValidationResults(result, originalData) {
        document.getElementById('validationLoading').style.display = 'none';
        document.getElementById('validationResults').style.display = 'block';

        const isValid = result.isValid;
        const summary = `Total: ${result.totalRecords} | Valid: ${result.validCount} | Invalid: ${result.invalidCount}`;

        document.getElementById('validationSummary').textContent = summary;

        const badge = document.getElementById('validationBadge');
        if (isValid) {
            badge.innerHTML = '<span class="badge bg-success">All Valid</span>';
            document.getElementById('uploadDataBtn').style.display = 'inline-block';
            document.getElementById('errorDisplayContainer').style.display = 'none';
            document.getElementById('dataFilter').style.display = 'none';

            // Update step indicator
            document.getElementById('step3').classList.add('active');
        } else {
            badge.innerHTML = '<span class="badge bg-danger">Validation Failed</span>';
            document.getElementById('uploadDataBtn').style.display = 'none';
            document.getElementById('dataFilter').style.display = 'flex';
            showEnhancedErrorDisplay(result);
        }

        // Display table
        displayDataTable(result, originalData);
    }

    function displayDataTable(result, originalData) {
        const tbody = document.getElementById('dataTableBody');
        tbody.innerHTML = '';

        const allRecords = [
            ...result.validRecords.map((r, i) => ({
                data: r,
                valid: true,
                errors: [],
                severity: 'valid'
            })),
            ...result.invalidRecords.map(r => ({
                data: r.meterData,
                valid: false,
                errors: r.errors,
                severity: getHighestSeverity(r.errors)
            }))
        ];

        allRecords.forEach((record, index) => {
            const row = document.createElement('tr');
            row.className = `data-row ${record.valid ? 'row-valid' : 'row-error'}`;
            row.dataset.severity = record.severity;
            row.dataset.valid = record.valid;

            const statusCell = record.valid ?
                '<span class="badge bg-success">Valid</span>' :
                `<span class="badge bg-danger">${record.errors.length} Error(s)</span>`;

            row.innerHTML = `
                <td>${index + 1}</td>
                <td>${record.data.consumerId}</td>
                <td>${record.data.dtrid}</td>
                <td>${record.data.ipaddress}</td>
                <td>${record.data.manufacturerId}</td>
                <td>${record.data.tariffId}</td>
                <td>${new Date(record.data.installDate).toLocaleDateString()}</td>
                <td>${record.data.statusId}</td>
                <td>${record.data.latestReading}</td>
                <td>${statusCell}</td>
            `;
            tbody.appendChild(row);
        });

        // Add filter functionality
        setupDataFiltering();
    }

    function getHighestSeverity(errors) {
        if (errors.some(error => getErrorSeverity(error) === 'critical')) return 'critical';
        if (errors.some(error => getErrorSeverity(error) === 'warning')) return 'warning';
        return 'info';
    }

    function setupDataFiltering() {
        const filterButtons = document.querySelectorAll('.filter-btn');
        filterButtons.forEach(btn => {
            btn.addEventListener('click', function() {
                // Update active button
                filterButtons.forEach(b => b.classList.remove('active'));
                this.classList.add('active');

                // Filter rows
                const filter = this.dataset.filter;
                const rows = document.querySelectorAll('.data-row');

                rows.forEach(row => {
                    switch (filter) {
                        case 'all':
                            row.style.display = '';
                            break;
                        case 'valid':
                            row.style.display = row.dataset.valid === 'true' ? '' : 'none';
                            break;
                        case 'errors':
                            row.style.display = row.dataset.valid === 'false' ? '' : 'none';
                            break;
                        case 'critical':
                            row.style.display = row.dataset.severity === 'critical' ? '' : 'none';
                            break;
                        case 'warning':
                            row.style.display = row.dataset.severity === 'warning' ? '' : 'none';
                            break;
                    }
                });
            });
        });
    }

    function showEnhancedErrorDisplay(result) {
        const errorContainer = document.getElementById('errorDisplayContainer');

        // Update statistics
        document.getElementById('validCountStat').textContent = result.validCount;
        document.getElementById('criticalCountStat').textContent = categorizedErrors.critical.length;
        document.getElementById('warningCountStat').textContent = categorizedErrors.warning.length;
        document.getElementById('infoCountStat').textContent = categorizedErrors.info.length;

        // Display error categories
        displayErrorCategories();

        errorContainer.style.display = 'block';

        // Add event listeners for error actions
        document.getElementById('downloadErrorReport').addEventListener('click', downloadErrorReport);
        document.getElementById('fixAndRetry').addEventListener('click', fixAndRetry);
    }

    function displayErrorCategories() {
        const container = document.getElementById('errorCategories');
        container.innerHTML = '';

        // Critical Errors
        if (categorizedErrors.critical.length > 0) {
            container.appendChild(createErrorCategory('critical', 'Critical Errors', categorizedErrors.critical));
        }

        // Warnings
        if (categorizedErrors.warning.length > 0) {
            container.appendChild(createErrorCategory('warning', 'Warnings', categorizedErrors.warning));
        }

        // Information
        if (categorizedErrors.info.length > 0) {
            container.appendChild(createErrorCategory('info', 'Information', categorizedErrors.info));
        }
    }

    function createErrorCategory(type, title, errors) {
        const category = document.createElement('div');
        category.className = 'error-category';

        const header = document.createElement('div');
        header.className = `error-category-header ${type}`;
        header.innerHTML = `
            <div class="d-flex justify-content-between align-items-center w-100">
                <div>
                    <i class="bi ${getErrorIcon(type)} me-2"></i>
                    <strong>${title}</strong>
                </div>
                <span class="error-category-count ${type}">${errors.length}</span>
            </div>
        `;

        const content = document.createElement('div');
        content.className = 'error-category-content';

        errors.forEach(error => {
            const errorRow = document.createElement('div');
            errorRow.className = 'error-detail-row';
            errorRow.innerHTML = `
                <div class="error-row-number">${error.rowNumber}</div>
                <div class="error-message">
                    <div>
                        <span class="error-field">${error.field}:</span>
                        ${error.message}
                    </div>
                    <div class="error-suggestion">${error.suggestion}</div>
                    <div class="error-actions">
                        <button class="btn btn-outline-primary btn-sm" onclick="highlightRow(${error.rowNumber})">
                            <i class="bi bi-eye me-1"></i>View Row
                        </button>
                        <button class="btn btn-outline-success btn-sm" onclick="suggestFix('${error.field}', ${error.rowNumber})">
                            <i class="bi bi-magic me-1"></i>Suggest Fix
                        </button>
                    </div>
                </div>
            `;
            content.appendChild(errorRow);
        });

        header.addEventListener('click', () => {
            content.classList.toggle('expanded');
        });

        category.appendChild(header);
        category.appendChild(content);

        return category;
    }

    function getErrorIcon(type) {
        switch (type) {
            case 'critical': return 'bi-exclamation-triangle-fill';
            case 'warning': return 'bi-exclamation-circle-fill';
            case 'info': return 'bi-info-circle-fill';
            default: return 'bi-question-circle';
        }
    }

    function highlightRow(rowNumber) {
        const rows = document.querySelectorAll('.data-row');
        rows.forEach(row => {
            row.style.backgroundColor = '';
            if (parseInt(row.cells[0].textContent) === rowNumber) {
                row.style.backgroundColor = '#fff3cd';
                row.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }
        });
    }

    function suggestFix(field, rowNumber) {
        const suggestions = {
            'Consumer ID': 'Ensure this is a unique numeric identifier',
            'DTR ID': 'Verify this DTR exists in the system',
            'IP Address': 'Use format: XXX.XXX.XXX.XXX',
            'Manufacturer ID': 'Check manufacturer reference table',
            'Tariff ID': 'Verify tariff configuration',
            'Install Date': 'Use YYYY-MM-DD format',
            'Status ID': 'Check valid status codes (1-5)',
            'Latest Reading': 'Must be a positive number'
        };

        const suggestion = suggestions[field] || 'Please review the field format and requirements';
        showAlert(`Fix suggestion for Row ${rowNumber}, ${field}: ${suggestion}`, 'info');
    }

    function downloadErrorReport() {
        const errorReport = {
            fileName: selectedFile.name,
            validationDate: new Date().toISOString(),
            summary: {
                totalRecords: validationResult.totalRecords,
                validRecords: validationResult.validCount,
                invalidRecords: validationResult.invalidCount
            },
            errors: categorizedErrors
        };

        const blob = new Blob([JSON.stringify(errorReport, null, 2)], { type: 'application/json' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = `error-report-${selectedFile.name}-${Date.now()}.json`;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
    }

    function fixAndRetry() {
        showAlert('Please fix the highlighted errors in your source file and re-upload.', 'info');
        // In a real application, you might provide an inline editor or download a corrected template
    }

    document.getElementById('goBackBtn').addEventListener('click', goBack);

    function goBack() {
        document.getElementById('uploadSection').style.display = 'block';
        document.getElementById('validationSection').style.display = 'none';
        document.getElementById('uploadProgressSection').style.display = 'none';
        validationResult = null;
        categorizedErrors = { critical: [], warning: [], info: [] };

        // Reset step indicator
        document.getElementById('step1').classList.add('active');
        document.getElementById('step2').classList.remove('active');
        document.getElementById('step3').classList.remove('active');
    }

    document.getElementById('uploadDataBtn').addEventListener('click', async () => {
        if (!validationResult || !validationResult.validRecords.length) return;

        document.getElementById('uploadDataBtn').disabled = true;
        document.getElementById('goBackBtn').disabled = true;
        document.getElementById('uploadProgressSection').style.display = 'block';

        const progressList = document.getElementById('progressList');
        progressList.innerHTML = '';

        let successCount = 0;
        const total = validationResult.validRecords.length;

        for (let i = 0; i < validationResult.validRecords.length; i++) {
            const meter = validationResult.validRecords[i];
            const progressItem = document.createElement('div');
            progressItem.className = 'progress-item';
            progressItem.innerHTML = `
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <i class="bi bi-hdd-network text-success me-2"></i>
                        <span>Consumer ID ${meter.consumerId}</span>
                    </div>
                    <div>
                        <span class="spinner-border spinner-border-sm text-success me-2"></span>
                        <span class="text-muted">Processing...</span>
                    </div>
                </div>
            `;
            progressList.appendChild(progressItem);

            try {
                const response = await fetch(`${API_BASE_URL}/api/Meter/Create`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(meter)
                });

                if (response.ok) {
                    progressItem.className = 'progress-item success';
                    progressItem.innerHTML = `
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                <span>Consumer ID ${meter.consumerId}</span>
                            </div>
                            <span class="text-success fw-bold">Success</span>
                        </div>
                    `;
                    successCount++;
                } else {
                    throw new Error('Upload failed');
                }
            } catch (error) {
                progressItem.className = 'progress-item failed';
                progressItem.innerHTML = `
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-x-circle-fill text-danger me-2"></i>
                            <span>Consumer ID ${meter.consumerId}</span>
                        </div>
                        <span class="text-danger fw-bold">Failed</span>
                    </div>
                `;
            }

            const progress = ((i + 1) / total) * 100;
            document.getElementById('overallProgress').style.width = progress + '%';
            document.getElementById('overallProgress').textContent = Math.round(progress) + '%';

            await new Promise(resolve => setTimeout(resolve, 200));
        }

        showAlert(`Upload complete! Successfully imported ${successCount} out of ${total} records.`,
                 successCount === total ? 'success' : 'warning');

        setTimeout(() => {
            document.getElementById('uploadDataBtn').disabled = false;
            document.getElementById('goBackBtn').disabled = false;
        }, 2000);
    });

    function generateId() {
        return Date.now().toString(36) + Math.random().toString(36).substr(2);
    }

    function formatFileSize(bytes) {
        if (bytes === 0) return '0 Bytes';
        const k = 1024;
        const sizes = ['Bytes', 'KB', 'MB', 'GB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
    }

    function showAlert(message, type) {
        const alert = document.createElement('div');
        alert.className = `alert alert-${type} alert-dismissible fade show`;
        alert.innerHTML = `
            <div class="d-flex align-items-center">
                <i class="bi ${type === 'success' ? 'bi-check-circle-fill' : type === 'danger' ? 'bi-exclamation-triangle-fill' : 'bi-info-circle-fill'} me-2"></i>
                <div>${message}</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;

        document.getElementById('alertContainer').appendChild(alert);

        setTimeout(() => {
            alert.remove();
        }, 5000);
    }
</script>