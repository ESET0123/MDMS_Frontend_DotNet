<script>
    // JavaScript code remains the same as in your original version
    // Only the UI has been enhanced
    let selectedFile = null;
    let parsedData = [];
    let validationResult = null;

    const uploadZone = document.getElementById('uploadZone');
    const fileInput = document.getElementById('meterFile');
    const fileInfo = document.getElementById('fileInfo');
    const fileName = document.getElementById('fileName');
    const fileSize = document.getElementById('fileSize');
    const validateBtn = document.getElementById('validateBtn');
    const uploadForm = document.getElementById('uploadForm');
    const fileTypeSelect = document.getElementById('fileType');
    const currentFileType = document.getElementById('currentFileType');

    // Update file type badge
    fileTypeSelect.addEventListener('change', function() {
        currentFileType.textContent = this.options[this.selectedIndex].text;
    });

    // File input handler
    fileInput.addEventListener('change', (e) => {
        console.log('File selected:', e.target.files[0]);
        handleFile(e.target.files[0]);
    });

    // Drag and drop handlers
    uploadZone.addEventListener('dragover', (e) => {
        e.preventDefault();
        uploadZone.classList.add('drag-over');
    });

    uploadZone.addEventListener('dragleave', () => {
        uploadZone.classList.remove('drag-over');
    });

    uploadZone.addEventListener('drop', (e) => {
        e.preventDefault();
        uploadZone.classList.remove('drag-over');
        handleFile(e.dataTransfer.files[0]);
    });

    // Remove file handler
    document.getElementById('removeFile').addEventListener('click', () => {
        resetFileSelection();
    });

    function handleFile(file) {
        if (!file) return;

        const fileType = document.getElementById('fileType').value;
        const validExtensions = {
            csv: ['.csv'],
            excel: ['.xlsx', '.xls']
        };

        const ext = '.' + file.name.split('.').pop().toLowerCase();
        if (!validExtensions[fileType].includes(ext)) {
            showAlert('Invalid file type. Please select a ' + fileType.toUpperCase() + ' file.', 'danger');
            return;
        }

        selectedFile = file;
        fileName.textContent = file.name;
        fileSize.textContent = formatFileSize(file.size);
        fileInfo.classList.remove('d-none');
        validateBtn.disabled = false;
        document.getElementById('fileStatus').textContent = 'Yes';
        document.getElementById('fileSizeStat').textContent = formatFileSize(file.size);
        console.log('File handled successfully:', file.name);
    }

    function resetFileSelection() {
        selectedFile = null;
        fileInput.value = '';
        fileInfo.classList.add('d-none');
        validateBtn.disabled = true;
        parsedData = [];
        document.getElementById('fileStatus').textContent = 'No';
        document.getElementById('fileSizeStat').textContent = '0 KB';
    }

    // Validate form submission
    uploadForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        if (!selectedFile) return;

        // Update step indicator
        document.getElementById('step1').classList.remove('active');
        document.getElementById('step2').classList.add('active');

        await parseAndValidate();
    });

    async function parseAndValidate() {
        const fileType = document.getElementById('fileType').value;

        // Show validation section
        document.getElementById('uploadSection').style.display = 'none';
        document.getElementById('validationSection').style.display = 'block';
        document.getElementById('validationLoading').style.display = 'block';
        document.getElementById('validationResults').style.display = 'none';
        document.getElementById('errorDisplayContainer').style.display = 'none';

        try {
            // Parse file
            if (fileType === 'csv') {
                parsedData = await parseCSV(selectedFile);
            } else if (fileType === 'excel') {
                parsedData = await parseExcel(selectedFile);
            }

            console.log('Parsed data:', parsedData);

            // Convert parsed data to MeterDTO format
            const meterData = parsedData.map(row => ({
                consumerId: parseInt(row.ConsumerId || row.consumerId),
                dtrid: parseInt(row.Dtrid || row.dtrid || row.DtrId),
                ipaddress: row.Ipaddress || row.ipaddress || row.IPAddress,
                iccid: row.Iccid || row.iccid || row.ICCID || null,
                imsi: row.Imsi || row.imsi || row.IMSI || null,
                manufacturerId: parseInt(row.ManufacturerId || row.manufacturerId),
                firmware: row.Firmware || row.firmware || null,
                tariffId: parseInt(row.TariffId || row.tariffId),
                installDate: row.InstallDate || row.installDate,
                statusId: parseInt(row.StatusId || row.statusId),
                latestReading: parseFloat(row.LatestReading || row.latestReading || 0)
            }));

            console.log('Converted meter data:', meterData);

            // Validate data
            const response = await fetch(`${API_BASE_URL}/api/Meter/ValidateBulk`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(meterData)
            });

            console.log('Validation response status:', response.status);

            if (!response.ok) {
                const errorText = await response.text();
                console.error('Validation error response:', errorText);
                throw new Error(`Validation failed: ${response.status} - ${errorText}`);
            }

            validationResult = await response.json();
            console.log('Validation result:', validationResult);
            displayValidationResults(validationResult, meterData);

        } catch (error) {
            console.error('Error:', error);
            showAlert('Error processing file: ' + error.message, 'danger');
            goBack();
        }
    }

    function parseCSV(file) {
        return new Promise((resolve, reject) => {
            Papa.parse(file, {
                header: true,
                skipEmptyLines: true,
                complete: (results) => {
                    resolve(results.data);
                },
                error: (error) => {
                    reject(error);
                }
            });
        });
    }

    function parseExcel(file) {
        return new Promise((resolve, reject) => {
            const reader = new FileReader();
            reader.onload = (e) => {
                try {
                    const data = new Uint8Array(e.target.result);
                    const workbook = XLSX.read(data, { type: 'array' });
                    const firstSheet = workbook.Sheets[workbook.SheetNames[0]];
                    const jsonData = XLSX.utils.sheet_to_json(firstSheet);
                    resolve(jsonData);
                } catch (error) {
                    reject(error);
                }
            };
            reader.onerror = reject;
            reader.readAsArrayBuffer(file);
        });
    }

    function displayValidationResults(result, originalData) {
        document.getElementById('validationLoading').style.display = 'none';
        document.getElementById('validationResults').style.display = 'block';

        const isValid = result.isValid;
        const summary = `Total: ${result.totalRecords} | Valid: ${result.validCount} | Invalid: ${result.invalidCount}`;

        document.getElementById('validationSummary').textContent = summary;

        const badge = document.getElementById('validationBadge');
        if (isValid) {
            badge.innerHTML = '<span class="badge bg-success">All Valid</span>';
            document.getElementById('uploadDataBtn').style.display = 'inline-block';
            document.getElementById('errorDisplayContainer').style.display = 'none';

            // Update step indicator
            document.getElementById('step3').classList.add('active');
        } else {
            badge.innerHTML = '<span class="badge bg-danger">Validation Failed</span>';
            document.getElementById('uploadDataBtn').style.display = 'none';
            showEnhancedErrorDisplay(result);
        }

        // Display table
        const tbody = document.getElementById('dataTableBody');
        tbody.innerHTML = '';

        const allRecords = [
            ...result.validRecords.map((r, i) => ({ data: r, valid: true, errors: [] })),
            ...result.invalidRecords.map(r => ({ data: r.meterData, valid: false, errors: r.errors }))
        ];

        allRecords.forEach((record, index) => {
            const row = document.createElement('tr');
            row.className = record.valid ? 'row-valid' : 'row-error';

            const statusCell = record.valid ?
                '<span class="badge bg-success">Valid</span>' :
                `<span class="badge bg-danger">Invalid</span><small class="d-block text-danger mt-1">${record.errors.join(', ')}</small>`;

            row.innerHTML = `
                <td>${index + 1}</td>
                <td>${record.data.consumerId}</td>
                <td>${record.data.dtrid}</td>
                <td>${record.data.ipaddress}</td>
                <td>${record.data.manufacturerId}</td>
                <td>${record.data.tariffId}</td>
                <td>${new Date(record.data.installDate).toLocaleDateString()}</td>
                <td>${record.data.statusId}</td>
                <td>${record.data.latestReading}</td>
                <td>${statusCell}</td>
            `;
            tbody.appendChild(row);
        });
    }

    function showEnhancedErrorDisplay(result) {
        const errorContainer = document.getElementById('errorDisplayContainer');
        const errorCount = document.getElementById('errorCount');
        const validCount = document.getElementById('validCount');
        const totalCount = document.getElementById('totalCount');
        const errorList = document.getElementById('errorList');

        errorCount.textContent = result.invalidCount;
        validCount.textContent = result.validCount;
        totalCount.textContent = result.totalRecords;

        errorList.innerHTML = '';

        if (result.invalidRecords.length > 0) {
            result.invalidRecords.forEach((record, index) => {
                const errorItem = document.createElement('div');
                errorItem.className = 'error-item';
                errorItem.innerHTML = `<strong>Record ${index + 1}:</strong> ${record.errors.join(', ')}`;
                errorList.appendChild(errorItem);
            });
        }

        errorContainer.style.display = 'block';
    }

    document.getElementById('goBackBtn').addEventListener('click', goBack);

    function goBack() {
        document.getElementById('uploadSection').style.display = 'block';
        document.getElementById('validationSection').style.display = 'none';
        document.getElementById('uploadProgressSection').style.display = 'none';
        validationResult = null;

        // Reset step indicator
        document.getElementById('step1').classList.add('active');
        document.getElementById('step2').classList.remove('active');
        document.getElementById('step3').classList.remove('active');
    }

    document.getElementById('uploadDataBtn').addEventListener('click', async () => {
        if (!validationResult || !validationResult.validRecords.length) return;

        document.getElementById('uploadDataBtn').disabled = true;
        document.getElementById('goBackBtn').disabled = true;
        document.getElementById('uploadProgressSection').style.display = 'block';

        const progressList = document.getElementById('progressList');
        progressList.innerHTML = '';

        let successCount = 0;
        const total = validationResult.validRecords.length;

        for (let i = 0; i < validationResult.validRecords.length; i++) {
            const meter = validationResult.validRecords[i];
            const progressItem = document.createElement('div');
            progressItem.className = 'progress-item';
            progressItem.innerHTML = `
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <i class="bi bi-hdd-network text-primary me-2"></i>
                        <span>Consumer ID ${meter.consumerId}</span>
                    </div>
                    <div>
                        <span class="spinner-border spinner-border-sm text-primary me-2"></span>
                        <span class="text-muted">Processing...</span>
                    </div>
                </div>
            `;
            progressList.appendChild(progressItem);

            try {
                const response = await fetch(`${API_BASE_URL}/api/Meter/Create`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(meter)
                });

                if (response.ok) {
                    progressItem.className = 'progress-item success';
                    progressItem.innerHTML = `
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                <span>Consumer ID ${meter.consumerId}</span>
                            </div>
                            <span class="text-success fw-bold">Success</span>
                        </div>
                    `;
                    successCount++;
                } else {
                    throw new Error('Upload failed');
                }
            } catch (error) {
                progressItem.className = 'progress-item failed';
                progressItem.innerHTML = `
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-x-circle-fill text-danger me-2"></i>
                            <span>Consumer ID ${meter.consumerId}</span>
                        </div>
                        <span class="text-danger fw-bold">Failed</span>
                    </div>
                `;
            }

            const progress = ((i + 1) / total) * 100;
            document.getElementById('overallProgress').style.width = progress + '%';
            document.getElementById('overallProgress').textContent = Math.round(progress) + '%';

            await new Promise(resolve => setTimeout(resolve, 200));
        }

        showAlert(`Upload complete! Successfully imported ${successCount} out of ${total} records.`,
                 successCount === total ? 'success' : 'warning');

        setTimeout(() => {
            document.getElementById('uploadDataBtn').disabled = false;
            document.getElementById('goBackBtn').disabled = false;
        }, 2000);
    });

    function generateId() {
        return Date.now().toString(36) + Math.random().toString(36).substr(2);
    }

    function formatFileSize(bytes) {
        if (bytes === 0) return '0 Bytes';
        const k = 1024;
        const sizes = ['Bytes', 'KB', 'MB', 'GB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
    }

    function showAlert(message, type) {
        const alert = document.createElement('div');
        alert.className = `alert alert-${type} alert-dismissible fade show`;
        alert.innerHTML = `
            <div class="d-flex align-items-center">
                <i class="bi ${type === 'success' ? 'bi-check-circle-fill' : type === 'danger' ? 'bi-exclamation-triangle-fill' : 'bi-info-circle-fill'} me-2"></i>
                <div>${message}</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;

        document.getElementById('alertContainer').appendChild(alert);

        setTimeout(() => {
            alert.remove();
        }, 5000);
    }
</script>