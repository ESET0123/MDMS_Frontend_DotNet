@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    ViewData["Title"] = "Upload Meter Data";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/PapaParse/5.4.1/papaparse.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        --success-gradient: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        --danger-gradient: linear-gradient(135deg, #dc3545 0%, #fd7e14 100%);
        --warning-gradient: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
        --info-gradient: linear-gradient(135deg, #17a2b8 0%, #6f42c1 100%);
    }

    .upload-container {
        background: #f8f9fa;
        width: 100%;
        padding: 20px 0;
    }

    .page-header {
        background: var(--primary-gradient);
        color: white;
        padding: 2rem;
        border-radius: 15px;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .upload-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 25px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background: white;
    }

        .upload-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
        }

    .upload-zone {
        border: 3px dashed #dee2e6;
        border-radius: 12px;
        padding: 3rem 2rem;
        text-align: center;
        transition: all 0.3s ease;
        cursor: pointer;
        background: #fafbfc;
        position: relative;
        overflow: hidden;
    }

        .upload-zone::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(40, 167, 69, 0.1), transparent);
            transition: left 0.5s ease;
        }

        .upload-zone:hover::before {
            left: 100%;
        }

        .upload-zone:hover {
            border-color: #28a745;
            background: linear-gradient(135deg, #f8fff9 0%, #f0fff4 100%);
            transform: scale(1.02);
        }

        .upload-zone.drag-over {
            border-color: #28a745;
            background: linear-gradient(135deg, #e7ffe9 0%, #dcffe1 100%);
            transform: scale(1.02);
        }

    .upload-icon {
        font-size: 4rem;
        color: #28a745;
        margin-bottom: 1rem;
        transition: transform 0.3s ease;
    }

    .upload-zone:hover .upload-icon {
        transform: scale(1.1) translateY(-5px);
    }

    .file-info-card {
        background: linear-gradient(135deg, #e8f5e9 0%, #e0f2e1 100%);
        border: none;
        border-radius: 12px;
        border-left: 5px solid #28a745;
        padding: 1.5rem;
        margin-top: 1rem;
        animation: slideIn 0.5s ease;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .stats-card {
        background: var(--primary-gradient);
        color: white;
        border-radius: 15px;
        border: none;
        transition: transform 0.3s ease;
    }

        .stats-card:hover {
            transform: translateY(-3px);
        }

    .stats-icon {
        font-size: 2.5rem;
        opacity: 0.8;
    }

    .validation-loading {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 25px rgba(0,0,0,0.1);
    }

    .spinner-custom {
        width: 60px;
        height: 60px;
        border: 4px solid #f3f3f3;
        border-top: 4px solid #28a745;
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin: 0 auto 1.5rem;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .data-table-container {
        max-height: 600px;
        overflow-y: auto;
        border-radius: 12px;
        box-shadow: 0 3px 15px rgba(0,0,0,0.1);
    }

    .table-actions {
        position: sticky;
        top: 0;
        background: white;
        z-index: 10;
        padding: 1.5rem 0;
        border-bottom: 2px solid #dee2e6;
        margin-bottom: 1rem;
    }

    .row-valid {
        background-color: rgba(40, 167, 69, 0.05) !important;
        border-left: 4px solid #28a745;
        transition: background-color 0.3s ease;
    }

    .row-error {
        background-color: rgba(220, 53, 69, 0.05) !important;
        border-left: 4px solid #dc3545;
        transition: background-color 0.3s ease;
    }

        .row-valid:hover, .row-error:hover {
            background-color: rgba(0,0,0,0.02) !important;
        }

    .error-container {
        background: linear-gradient(135deg, #fff5f5 0%, #ffe6e6 100%);
        border: 2px solid #f5c6cb;
        border-radius: 15px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 5px 20px rgba(220, 53, 69, 0.1);
        animation: shake 0.5s ease;
    }

    @@keyframes shake {
        0%, 100% {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-5px);
        }

        75% {
            transform: translateX(5px);
        }
    }

    .error-header {
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #f5c6cb;
    }

    .error-icon {
        font-size: 2rem;
        color: #dc3545;
        margin-right: 1rem;
    }

    .error-summary {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border-left: 5px solid #dc3545;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

    .error-details {
        max-height: 300px;
        overflow-y: auto;
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        border: 2px solid #dee2e6;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

    .error-item {
        padding: 1rem;
        margin-bottom: 0.5rem;
        background: #f8f9fa;
        border-radius: 8px;
        border-left: 4px solid #dc3545;
        transition: transform 0.2s ease;
    }

        .error-item:hover {
            transform: translateX(5px);
        }

    .progress-item {
        padding: 1rem;
        margin-bottom: 0.75rem;
        border-radius: 10px;
        border: 2px solid #dee2e6;
        transition: all 0.3s ease;
        background: white;
    }

        .progress-item.success {
            background: linear-gradient(135deg, #d1e7dd 0%, #c3e6cb 100%);
            border-color: #28a745;
        }

        .progress-item.failed {
            background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
            border-color: #dc3545;
        }

    .alert-container {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 9999;
        max-width: 400px;
    }

    .btn-gradient {
        background: var(--primary-gradient);
        border: none;
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

        .btn-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(40, 167, 69, 0.4);
            color: white;
        }

    .btn-success-gradient {
        background: var(--success-gradient);
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

        .btn-success-gradient:hover {
            box-shadow: 0 8px 25px rgba(40, 167, 69, 0.4);
        }

    .btn-danger-gradient {
        background: var(--danger-gradient);
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
    }

        .btn-danger-gradient:hover {
            box-shadow: 0 8px 25px rgba(220, 53, 69, 0.4);
        }

    .file-type-badge {
        background: var(--primary-gradient);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 25px;
        font-weight: 600;
    }

    .step-indicator {
        display: flex;
        justify-content: center;
        margin-bottom: 2rem;
    }

    .step {
        display: flex;
        align-items: center;
        margin: 0 1rem;
        opacity: 0.5;
        transition: all 0.3s ease;
    }

        .step.active {
            opacity: 1;
        }

    .step-number {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #dee2e6;
        color: #6c757d;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        margin-right: 0.5rem;
        transition: all 0.3s ease;
    }

    .step.active .step-number {
        background: var(--primary-gradient);
        color: white;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

    .step-text {
        font-weight: 600;
        color: #6c757d;
    }

    .step.active .step-text {
        color: #28a745;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .stat-item {
        background: white;
        padding: 1.5rem;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 3px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

        .stat-item:hover {
            transform: translateY(-3px);
        }

    .stat-value {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .validation-badge {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
    }

    .text-success {
        color: #28a745 !important;
    }

    .bg-success {
        background-color: #28a745 !important;
    }

    .table-success {
        background-color: rgba(40, 167, 69, 0.1) !important;
    }

    .text-primary {
        color: #28a745 !important;
    }

    .border-success {
        border-color: #28a745 !important;
    }

    .progress-bar {
        background-color: #28a745;
    }

    /* Enhanced Error Handling Styles */
    .error-category {
        margin-bottom: 1.5rem;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

    .error-category-header {
        padding: 1rem 1.5rem;
        background: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
        cursor: pointer;
        display: flex;
        justify-content: between;
        align-items: center;
    }

        .error-category-header.critical {
            background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
            border-left: 5px solid #dc3545;
        }

        .error-category-header.warning {
            background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
            border-left: 5px solid #ffc107;
        }

        .error-category-header.info {
            background: linear-gradient(135deg, #d1ecf1 0%, #bee5eb 100%);
            border-left: 5px solid #17a2b8;
        }

    .error-category-content {
        background: white;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease;
    }

        .error-category-content.expanded {
            max-height: 500px;
        }

    .error-category-count {
        background: #dc3545;
        color: white;
        border-radius: 20px;
        padding: 0.25rem 0.75rem;
        font-size: 0.875rem;
        font-weight: 600;
    }

        .error-category-count.warning {
            background: #ffc107;
        }

        .error-category-count.info {
            background: #17a2b8;
        }

    .error-detail-row {
        padding: 1rem 1.5rem;
        border-bottom: 1px solid #f1f1f1;
        display: flex;
        align-items: flex-start;
    }

        .error-detail-row:last-child {
            border-bottom: none;
        }

    .error-row-number {
        background: #6c757d;
        color: white;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.875rem;
        font-weight: bold;
        margin-right: 1rem;
        flex-shrink: 0;
    }

    .error-message {
        flex: 1;
    }

    .error-field {
        font-weight: 600;
        color: #dc3545;
    }

    .error-suggestion {
        font-size: 0.875rem;
        color: #6c757d;
        margin-top: 0.25rem;
        font-style: italic;
    }

    .error-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
    }

        .error-actions button {
            font-size: 0.75rem;
            padding: 0.25rem 0.75rem;
        }

    .validation-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .validation-stat {
        text-align: center;
        padding: 1.5rem 1rem;
        border-radius: 10px;
        background: white;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

        .validation-stat.critical {
            border-top: 4px solid #dc3545;
        }

        .validation-stat.warning {
            border-top: 4px solid #ffc107;
        }

        .validation-stat.info {
            border-top: 4px solid #17a2b8;
        }

        .validation-stat.success {
            border-top: 4px solid #28a745;
        }

    .validation-stat-value {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .validation-stat-label {
        font-size: 0.875rem;
        color: #6c757d;
    }

    .download-error-btn {
        background: var(--danger-gradient);
        border: none;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        font-size: 0.875rem;
        transition: all 0.3s ease;
    }

        .download-error-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
            color: white;
        }

    .filter-buttons {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 1rem;
        flex-wrap: wrap;
    }

    .filter-btn {
        padding: 0.5rem 1rem;
        border: 1px solid #dee2e6;
        background: white;
        border-radius: 5px;
        transition: all 0.3s ease;
        font-size: 0.875rem;
    }

        .filter-btn.active {
            background: var(--primary-gradient);
            color: white;
            border-color: #28a745;
        }

        .filter-btn:hover:not(.active) {
            background: #f8f9fa;
        }
</style>

<div class="upload-container">
    <div class="alert-container" id="alertContainer"></div>

    <div class="container">
        <!-- Page Header -->
        <div class="page-header text-center">
            <h1 class="display-5 fw-bold mb-3">
                <i class="bi bi-cloud-upload-fill me-3"></i>
                Upload Meter Data
            </h1>
            <p class="lead mb-0">Upload CSV or Excel files containing meter information for bulk processing</p>
        </div>

        <!-- Step Indicator -->
        <div class="step-indicator">
            <div class="step active" id="step1">
                <div class="step-number">1</div>
                <div class="step-text">Upload File</div>
            </div>
            <div class="step" id="step2">
                <div class="step-number">2</div>
                <div class="step-text">Validate Data</div>
            </div>
            <div class="step" id="step3">
                <div class="step-number">3</div>
                <div class="step-text">Import Data</div>
            </div>
        </div>

        <!-- Upload Section -->
        <div id="uploadSection">
            <div class="row">
                <div class="col-lg-8 mb-4">
                    <div class="upload-card">
                        <div class="card-body p-4">
                            <h4 class="card-title mb-4">
                                <i class="bi bi-file-earmark-arrow-up text-success me-2"></i>
                                Select Your Data File
                            </h4>

                            <form id="uploadForm">
                                <div class="row mb-4">
                                    <div class="col-md-6">
                                        <label for="fileType" class="form-label fw-semibold">File Format</label>
                                        <select class="form-select form-select-lg" id="fileType" required>
                                            <option value="csv">CSV Format</option>
                                            <option value="excel">Excel Format</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-semibold">Current Selection</label>
                                        <div class="file-type-badge" id="currentFileType">
                                            CSV Format
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Upload File</label>
                                    <div class="upload-zone" id="uploadZone">
                                        <i class="bi bi-cloud-arrow-up upload-icon"></i>
                                        <h5 class="mb-3">Drag & Drop Your File Here</h5>
                                        <p class="text-muted mb-3">Supported formats: .csv, .xlsx, .xls</p>
                                        <p class="text-muted mb-3">Maximum file size: 10MB</p>
                                        <input class="form-control d-none" type="file" id="meterFile" accept=".csv,.xlsx,.xls">
                                        <button type="button" class="btn btn-gradient btn-lg" onclick="document.getElementById('meterFile').click()">
                                            <i class="bi bi-folder2-open me-2"></i>Browse Files
                                        </button>
                                    </div>
                                    <div id="fileInfo" class="file-info-card d-none">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-file-earmark-text text-success me-3" style="font-size: 2rem;"></i>
                                                <div>
                                                    <h6 class="mb-1 fw-bold" id="fileName"></h6>
                                                    <span id="fileSize" class="text-muted"></span>
                                                </div>
                                            </div>
                                            <button type="button" class="btn btn-outline-danger btn-sm" id="removeFile">
                                                <i class="bi bi-trash me-1"></i> Remove
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-success-gradient btn-lg" id="validateBtn" disabled>
                                        <i class="bi bi-shield-check me-2"></i>Validate & Preview Data
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <!-- Quick Stats -->
                    <div class="stats-grid">
                        <div class="stat-item">
                            <div class="stat-value text-success" id="fileStatus">No</div>
                            <div class="stat-label">File Selected</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value text-success" id="fileSizeStat">0 KB</div>
                            <div class="stat-label">File Size</div>
                        </div>
                    </div>

                    <!-- Information Card -->
                    <div class="upload-card">
                        <div class="card-body p-4">
                            <h5 class="card-title mb-3">
                                <i class="bi bi-info-circle text-success me-2"></i>
                                Upload Guidelines
                            </h5>
                            <div class="mb-3">
                                <h6 class="text-success mb-2">
                                    <i class="bi bi-check-circle-fill me-2"></i>
                                    Required Columns
                                </h6>
                                <ul class="list-unstyled small">
                                    <li><i class="bi bi-arrow-right text-muted me-2"></i>ConsumerId</li>
                                    <li><i class="bi bi-arrow-right text-muted me-2"></i>DtrId</li>
                                    <li><i class="bi bi-arrow-right text-muted me-2"></i>IpAddress</li>
                                    <li><i class="bi bi-arrow-right text-muted me-2"></i>ManufacturerId</li>
                                    <li><i class="bi bi-arrow-right text-muted me-2"></i>TariffId</li>
                                    <li><i class="bi bi-arrow-right text-muted me-2"></i>InstallDate</li>
                                    <li><i class="bi bi-arrow-right text-muted me-2"></i>StatusId</li>
                                </ul>
                            </div>
                            <div>
                                <h6 class="text-success mb-2">
                                    <i class="bi bi-lightbulb me-2"></i>
                                    Tips
                                </h6>
                                <ul class="list-unstyled small text-muted">
                                    <li><i class="bi bi-dot me-1"></i>Ensure data is properly formatted</li>
                                    <li><i class="bi bi-dot me-1"></i>Check for duplicate entries</li>
                                    <li><i class="bi bi-dot me-1"></i>Verify numeric fields contain numbers</li>
                                    <li><i class="bi bi-dot me-1"></i>Dates should be in YYYY-MM-DD format</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Validation Section -->
        <div id="validationSection" class="validation-container" style="display: none;">
            <!-- Validation Loading -->
            <div id="validationLoading" class="validation-loading">
                <div class="spinner-custom"></div>
                <h4 class="text-success mb-3">Validating Your Data</h4>
                <p class="text-muted">Please wait while we validate your meter data...</p>
                <div class="progress mt-4" style="height: 6px;">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 100%"></div>
                </div>
            </div>

            <!-- Validation Results -->
            <div id="validationResults" style="display: none;">
                <div class="upload-card">
                    <div class="card-body p-4">
                        <!-- Enhanced Error Display -->
                        <div id="errorDisplayContainer" style="display: none;">
                            <div class="error-container">
                                <div class="error-header">
                                    <i class="bi bi-exclamation-triangle-fill error-icon"></i>
                                    <div>
                                        <h4 class="mb-1 text-danger">Validation Failed</h4>
                                        <p class="mb-0 text-muted">Please fix the errors below before proceeding</p>
                                    </div>
                                </div>

                                <!-- Validation Statistics -->
                                <div class="validation-stats" id="validationStats">
                                    <div class="validation-stat success">
                                        <div class="validation-stat-value" id="validCountStat">0</div>
                                        <div class="validation-stat-label">Valid Records</div>
                                    </div>
                                    <div class="validation-stat critical">
                                        <div class="validation-stat-value" id="criticalCountStat">0</div>
                                        <div class="validation-stat-label">Critical Errors</div>
                                    </div>
                                    <div class="validation-stat warning">
                                        <div class="validation-stat-value" id="warningCountStat">0</div>
                                        <div class="validation-stat-label">Warnings</div>
                                    </div>
                                    <div class="validation-stat info">
                                        <div class="validation-stat-value" id="infoCountStat">0</div>
                                        <div class="validation-stat-label">Information</div>
                                    </div>
