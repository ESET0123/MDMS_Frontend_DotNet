@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Monthly Bills";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-file-earmark-text"></i> Monthly Bills Management</h2>
        <div>
            <button class="btn btn-success me-2" data-bs-toggle="modal" data-bs-target="#billModal" onclick="prepareAddBill()">
                <i class="bi bi-plus-circle"></i> Add Monthly Bill
            </button>
            <button class="btn btn-primary" onclick="showBillGenerationSection()">
                <i class="bi bi-lightning-charge"></i> Generate Bills
            </button>
        </div>
    </div>

    <!-- Bill Generation Section -->
    <div id="billGenerationSection" class="card shadow-sm mb-4" style="display: none;">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-gear"></i> Generate Monthly Bills</h5>
        </div>
        <div class="card-body">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label for="genMonth" class="form-label">Month</label>
                    <select class="form-select" id="genMonth">
                        <option value="1">January</option>
                        <option value="2">February</option>
                        <option value="3">March</option>
                        <option value="4">April</option>
                        <option value="5">May</option>
                        <option value="6">June</option>
                        <option value="7">July</option>
                        <option value="8">August</option>
                        <option value="9">September</option>
                        <option value="10">October</option>
                        <option value="11">November</option>
                        <option value="12">December</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="genYear" class="form-label">Year</label>
                    <input type="number" class="form-control" id="genYear" min="2000" max="2100" value="@DateTime.Now.Year">
                </div>
                <div class="col-md-6">
                    <button class="btn btn-success" onclick="generateBillsFromReadings()">
                        <i class="bi bi-calculator"></i> Generate from Daily Readings
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Generate Bill for Specific Meter Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-speedometer2"></i> Generate Bill for Specific Meter</h5>
        </div>
        <div class="card-body">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label for="singleMeter" class="form-label">Select Meter</label>
                    <select class="form-select" id="singleMeter">
                        <option value="">-- Select Meter --</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="singleMeterMonth" class="form-label">Month</label>
                    <select class="form-select" id="singleMeterMonth">
                        <option value="1">January</option>
                        <option value="2">February</option>
                        <option value="3">March</option>
                        <option value="4">April</option>
                        <option value="5">May</option>
                        <option value="6">June</option>
                        <option value="7">July</option>
                        <option value="8">August</option>
                        <option value="9">September</option>
                        <option value="10">October</option>
                        <option value="11">November</option>
                        <option value="12">December</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="singleMeterYear" class="form-label">Year</label>
                    <input type="number" class="form-control" id="singleMeterYear" min="2000" max="2100">
                </div>
                <div class="col-md-3">
                    <button class="btn btn-primary w-100" onclick="generateBillForMeter()">
                        <i class="bi bi-file-earmark-plus"></i> Generate Bill
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Advanced Filters Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filter Bills</h5>
        </div>
        <div class="card-body">
            <div class="row g-3 align-items-end">
                <div class="col-md-2">
                    <label for="filterMonth" class="form-label">Month</label>
                    <select class="form-select" id="filterMonth">
                        <option value="0">All Months</option>
                        <option value="1">January</option>
                        <option value="2">February</option>
                        <option value="3">March</option>
                        <option value="4">April</option>
                        <option value="5">May</option>
                        <option value="6">June</option>
                        <option value="7">July</option>
                        <option value="8">August</option>
                        <option value="9">September</option>
                        <option value="10">October</option>
                        <option value="11">November</option>
                        <option value="12">December</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="filterYear" class="form-label">Year</label>
                    <input type="number" class="form-control" id="filterYear" min="2000" max="2100" value="@DateTime.Now.Year">
                </div>
                <div class="col-md-2">
                    <label for="filterConsumer" class="form-label">Consumer</label>
                    <select class="form-select" id="filterConsumer">
                        <option value="0">All Consumers</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="filterMeter" class="form-label">Meter</label>
                    <select class="form-select" id="filterMeter">
                        <option value="0">All Meters</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="filterStatus" class="form-label">Status</label>
                    <select class="form-select" id="filterStatus">
                        <option value="">All Status</option>
                        <option value="Pending">Pending</option>
                        <option value="Paid">Paid</option>
                        <option value="Overdue">Overdue</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="filterAmountRange" class="form-label">Amount Range</label>
                    <select class="form-select" id="filterAmountRange">
                        <option value="0">All Amounts</option>
                        <option value="1">0 - 500</option>
                        <option value="2">501 - 1000</option>
                        <option value="3">1001 - 2000</option>
                        <option value="4">2000+</option>
                    </select>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <button class="btn btn-outline-primary me-2" onclick="applyFilters()">
                                <i class="bi bi-funnel"></i> Apply Filters
                            </button>
                            <button class="btn btn-outline-secondary" onclick="clearFilters()">
                                <i class="bi bi-x-circle"></i> Clear Filters
                            </button>
                        </div>
                        <div class="text-muted">
                            <span id="filteredCount">0</span> bills found |
                            Total: ₹<span id="filteredAmount">0.00</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Status Messages -->
    <div id="loadingIndicator" class="text-center my-4" style="display: none;">
        <div class="spinner-border text-success" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2">Loading bills...</p>
    </div>

    <div id="errorMessage" class="alert alert-danger alert-dismissible fade show" style="display: none;">
        <button type="button" class="btn-close" onclick="showError('')"></button>
        <span id="errorText"></span>
    </div>

    <div id="successMessage" class="alert alert-success alert-dismissible fade show" style="display: none;">
        <button type="button" class="btn-close" onclick="showSuccess('')"></button>
        <span id="successText"></span>
    </div>

    <!-- Main Bills Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-list"></i> All Monthly Bills</h5>
                <div class="text-light">
                    <small>
                        Total: <span id="totalBillsCount">0</span> bills |
                        Amount: ₹<span id="totalBillsAmount">0.00</span> |
                        Consumption: <span id="totalBillsConsumption">0.00</span> kWh
                    </small>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Bill ID</th>
                            <th>Consumer</th>
                            <th>Meter</th>
                            <th>Period</th>
                            <th>Billing Date</th>
                            <th>Consumption (kWh)</th>
                            <th>Amount (₹)</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="billsTableBody">
                        <tr>
                            <td colspan="9" class="text-center text-muted">Loading bills...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add/Edit Modal -->
<div class="modal fade" id="billModal" tabindex="-1" aria-labelledby="billModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="billModalLabel">Add Monthly Bill</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="billForm">
                    <input type="hidden" id="isEdit" value="false" />
                    <input type="hidden" id="billId" value="0" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="consumerId" class="form-label">Consumer <span class="text-danger">*</span></label>
                            <select class="form-select" id="consumerId" required onchange="updateMetersByConsumer()">
                                <option value="">-- Select Consumer --</option>
                            </select>
                            <div class="form-text" id="consumerInfo"></div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="meterId" class="form-label">Meter <span class="text-danger">*</span></label>
                            <select class="form-select" id="meterId" required>
                                <option value="">-- Select Meter --</option>
                            </select>
                            <div class="form-text" id="meterInfo"></div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="billingMonth" class="form-label">Billing Month <span class="text-danger">*</span></label>
                            <select class="form-select" id="billingMonth" required>
                                <option value="">-- Select Month --</option>
                                <option value="1">January</option>
                                <option value="2">February</option>
                                <option value="3">March</option>
                                <option value="4">April</option>
                                <option value="5">May</option>
                                <option value="6">June</option>
                                <option value="7">July</option>
                                <option value="8">August</option>
                                <option value="9">September</option>
                                <option value="10">October</option>
                                <option value="11">November</option>
                                <option value="12">December</option>
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="billingYear" class="form-label">Billing Year <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="billingYear" min="2000" max="2100" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="billingDate" class="form-label">Billing Date <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" id="billingDate" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="totalConsumptionKwh" class="form-label">Total Consumption (kWh) <span class="text-danger">*</span></label>
                            <input type="number" step="0.01" class="form-control" id="totalConsumptionKwh" required
                                   onchange="calculateEstimatedAmount()">
                            <div class="form-text">Based on consumption and rate</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="totalAmount" class="form-label">Total Amount (₹) <span class="text-danger">*</span></label>
                            <input type="number" step="0.01" class="form-control" id="totalAmount" required>
                            <div class="form-text" id="amountInfo"></div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label for="billStatus" class="form-label">Bill Status <span class="text-danger">*</span></label>
                            <select class="form-select" id="billStatus" required>
                                <option value="">-- Select Status --</option>
                                <option value="Pending">Pending</option>
                                <option value="Paid">Paid</option>
                                <option value="Overdue">Overdue</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" onclick="saveBill()">
                    <i class="bi bi-save"></i> Save Bill
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Configuration
        const BILL_API_URL = `${API_BASE_URL}/api/MonthlyBill`;
        const CONSUMER_API_URL = `${API_BASE_URL}/api/Consumer`;
        const METER_API_URL = `${API_BASE_URL}/api/Meter`;

        // Global variables
        let allBills = [];
        let allConsumers = [];
        let allMeters = [];
        let filteredBills = [];
        let billModal;

        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize modals
            billModal = new bootstrap.Modal(document.getElementById('billModal'));

            // Set current month/year
            const currentDate = new Date();
            const currentMonth = currentDate.getMonth() + 1;
            const currentYear = currentDate.getFullYear();

            document.getElementById('genMonth').value = currentMonth;
            document.getElementById('billingMonth').value = currentMonth;
            document.getElementById('billingYear').value = currentYear;
            document.getElementById('genYear').value = currentYear;
            document.getElementById('filterYear').value = currentYear;
            document.getElementById('filterMonth').value = currentMonth;
            document.getElementById('singleMeterMonth').value = currentMonth;
            document.getElementById('singleMeterYear').value = currentYear;

            // Set default billing date to today
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('billingDate').value = today;

            // Load initial data
            fetchBills();
            fetchConsumers();
            fetchMeters();

            // Initialize filters
            initializeFilters();
        });

        function initializeFilters() {
            document.getElementById('filterMonth').addEventListener('change', applyFilters);
            document.getElementById('filterYear').addEventListener('change', applyFilters);
            document.getElementById('filterConsumer').addEventListener('change', applyFilters);
            document.getElementById('filterMeter').addEventListener('change', applyFilters);
            document.getElementById('filterStatus').addEventListener('change', applyFilters);
            document.getElementById('filterAmountRange').addEventListener('change', applyFilters);
        }

        function showBillGenerationSection() {
            const section = document.getElementById('billGenerationSection');
            section.style.display = section.style.display === 'none' ? 'block' : 'none';
        }

        async function generateBillsFromReadings() {
            const month = parseInt(document.getElementById('genMonth').value);
            const year = parseInt(document.getElementById('genYear').value);

            if (!month || !year) {
                showError('Please select both month and year');
                return;
            }

            if (!confirm(`Generate monthly bills from daily readings for ${month}/${year}?`)) {
                return;
            }

            try {
                showLoading(true);
                const response = await fetch(`${BILL_API_URL}/GenerateBillsFromReadings`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ month, year }),
                });

                if (response.ok) {
                    const result = await response.json();
                    showSuccess(result.message || `Bills generated successfully for ${month}/${year}`);
                    await fetchBills();
                } else {
                    const errorText = await response.text();
                    throw new Error(errorText);
                }
            } catch (error) {
                console.error('Error generating bills from readings:', error);
                showError('Failed to generate bills: ' + error.message);
            } finally {
                showLoading(false);
            }
        }

        async function fetchBills() {
            try {
                showLoading(true);
                const response = await fetch(`${BILL_API_URL}/AllMonthlyBills`);

                if (response.ok) {
                    allBills = await response.json();
                    filteredBills = [...allBills];
                    renderBillsTable(filteredBills);
                    updateFilterStats();
                } else {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
            } catch (error) {
                console.error('Error loading bills:', error);
                showError('Failed to load bills: ' + error.message);
            } finally {
                showLoading(false);
            }
        }

        async function fetchConsumers() {
            try {
                const response = await fetch(`${CONSUMER_API_URL}/AllConsumers`);

                if (response.ok) {
                    allConsumers = await response.json();
                    populateConsumersDropdown();
                    populateFilterConsumers();
                } else {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
            } catch (error) {
                console.error('Error loading consumers:', error);
            }
        }

        async function fetchMeters() {
            try {
                const response = await fetch(`${METER_API_URL}/AllMeters`);

                if (response.ok) {
                    allMeters = await response.json();
                    populateMetersDropdown();
                    populateFilterMeters();
                    populateSingleMeterDropdown();
                } else {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
            } catch (error) {
                console.error('Error loading meters:', error);
            }
        }

        // Enhanced filtering system
        function applyFilters() {
            const month = parseInt(document.getElementById('filterMonth').value) || 0;
            const year = parseInt(document.getElementById('filterYear').value) || 0;
            const consumerId = parseInt(document.getElementById('filterConsumer').value) || 0;
            const meterId = parseInt(document.getElementById('filterMeter').value) || 0;
            const status = document.getElementById('filterStatus').value;
            const amountRange = parseInt(document.getElementById('filterAmountRange').value) || 0;

            filteredBills = allBills.filter(bill => {
                if (month > 0 && bill.billingMonth !== month) return false;
                if (year > 0 && bill.billingYear !== year) return false;
                if (consumerId > 0 && bill.consumerId !== consumerId) return false;
                if (meterId > 0 && bill.meterId !== meterId) return false;
                if (status && bill.billStatus !== status) return false;

                if (amountRange > 0) {
                    switch(amountRange) {
                        case 1: if (bill.totalAmount > 500) return false; break;
                        case 2: if (bill.totalAmount < 501 || bill.totalAmount > 1000) return false; break;
                        case 3: if (bill.totalAmount < 1001 || bill.totalAmount > 2000) return false; break;
                        case 4: if (bill.totalAmount <= 2000) return false; break;
                    }
                }

                return true;
            });

            renderBillsTable(filteredBills);
            updateFilterStats();
        }

        function clearFilters() {
            document.getElementById('filterMonth').value = '0';
            document.getElementById('filterYear').value = new Date().getFullYear();
            document.getElementById('filterConsumer').value = '0';
            document.getElementById('filterMeter').value = '0';
            document.getElementById('filterStatus').value = '';
            document.getElementById('filterAmountRange').value = '0';

            filteredBills = [...allBills];
            renderBillsTable(filteredBills);
            updateFilterStats();
        }

        function updateFilterStats() {
            const totalAmount = filteredBills.reduce((sum, bill) => sum + (bill.totalAmount || 0), 0);
            const totalConsumption = filteredBills.reduce((sum, bill) => sum + (bill.totalConsumptionKwh || 0), 0);

            document.getElementById('filteredCount').textContent = filteredBills.length;
            document.getElementById('filteredAmount').textContent = totalAmount.toFixed(2);
            document.getElementById('totalBillsCount').textContent = filteredBills.length;
            document.getElementById('totalBillsAmount').textContent = totalAmount.toFixed(2);
            document.getElementById('totalBillsConsumption').textContent = totalConsumption.toFixed(2);
        }

        function populateConsumersDropdown() {
            const select = document.getElementById('consumerId');
            select.innerHTML = '<option value="">-- Select Consumer --</option>';
            allConsumers.forEach(consumer => {
                select.innerHTML += `<option value="${consumer.consumerId}">${consumer.name || 'Consumer ' + consumer.consumerId}</option>`;
            });
        }

        function populateFilterConsumers() {
            const select = document.getElementById('filterConsumer');
            select.innerHTML = '<option value="0">All Consumers</option>';
            allConsumers.forEach(consumer => {
                select.innerHTML += `<option value="${consumer.consumerId}">${consumer.name}</option>`;
            });
        }

        function populateMetersDropdown() {
            const select = document.getElementById('meterId');
            select.innerHTML = '<option value="">-- Select Meter --</option>';
            allMeters.forEach(meter => {
                select.innerHTML += `<option value="${meter.meterId}">Meter ${meter.meterId}</option>`;
            });
        }

        function populateFilterMeters() {
            const select = document.getElementById('filterMeter');
            select.innerHTML = '<option value="0">All Meters</option>';
            allMeters.forEach(meter => {
                select.innerHTML += `<option value="${meter.meterId}">Meter ${meter.meterId}</option>`;
            });
        }

        function populateSingleMeterDropdown() {
            const select = document.getElementById('singleMeter');
            select.innerHTML = '<option value="">-- Select Meter --</option>';
            allMeters.forEach(meter => {
                const consumer = allConsumers.find(c => c.consumerId === meter.consumerId);
                const consumerName = consumer ? consumer.name : 'Unknown';
                select.innerHTML += `<option value="${meter.meterId}">Meter ${meter.meterId} - ${consumerName}</option>`;
            });
        }

        function updateMetersByConsumer() {
            const consumerId = parseInt(document.getElementById('consumerId').value);
            const meterSelect = document.getElementById('meterId');

            meterSelect.innerHTML = '<option value="">-- Select Meter --</option>';

            if (consumerId) {
                const consumerMeters = allMeters.filter(meter => meter.consumerId === consumerId);
                consumerMeters.forEach(meter => {
                    meterSelect.innerHTML += `<option value="${meter.meterId}">Meter ${meter.meterId}</option>`;
                });
            }
        }

        function renderBillsTable(bills) {
            const tbody = document.getElementById('billsTableBody');

            if (!tbody) {
                console.error('Bills table body not found!');
                return;
            }

            if (bills && bills.length > 0) {
                let tableHtml = '';
                bills.forEach(bill => {
                    const billingDate = new Date(bill.billingDate).toLocaleDateString('en-IN');
                    const period = bill.billingMonth + '/' + bill.billingYear;

                    let statusBadge;
                    switch(bill.billStatus) {
                        case 'Paid':
                            statusBadge = '<span class="badge bg-success">Paid</span>';
                            break;
                        case 'Overdue':
                            statusBadge = '<span class="badge bg-danger">Overdue</span>';
                            break;
                        case 'Cancelled':
                            statusBadge = '<span class="badge bg-secondary">Cancelled</span>';
                            break;
                        default:
                            statusBadge = '<span class="badge bg-warning text-dark">Pending</span>';
                    }

                    tableHtml += `
                        <tr>
                            <td><strong>${bill.billId}</strong></td>
                            <td>${bill.consumerName || 'N/A'}</td>
                            <td>Meter #${bill.meterId}</td>
                            <td>${period}</td>
                            <td>${billingDate}</td>
                            <td>${(bill.totalConsumptionKwh || 0).toFixed(2)}</td>
                            <td><strong>₹${(bill.totalAmount || 0).toFixed(2)}</strong></td>
                            <td>${statusBadge}</td>
                            <td>
                                <button class="btn btn-sm btn-outline-info me-1" onclick="viewBillDetails(${bill.billId})" title="View Details">
                                    <i class="bi bi-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-success me-1" onclick="editBill(${bill.billId})" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" onclick="deleteBill(${bill.billId})" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    `;
                });
                tbody.innerHTML = tableHtml;
            } else {
                tbody.innerHTML = '<tr><td colspan="9" class="text-center text-muted">No bills found matching the criteria.</td></tr>';
            }
        }

        async function generateBillForMeter() {
            const meterId = parseInt(document.getElementById('singleMeter').value);
            const month = parseInt(document.getElementById('singleMeterMonth').value);
            const year = parseInt(document.getElementById('singleMeterYear').value);

            if (!meterId) {
                showError('Please select a meter');
                return;
            }

            if (!month || !year) {
                showError('Please select both month and year');
                return;
            }

            const meter = allMeters.find(m => m.meterId === meterId);
            const consumer = allConsumers.find(c => c.consumerId === meter?.consumerId);
            const monthName = new Date(year, month - 1, 1).toLocaleDateString('en-US', { month: 'long' });

            if (!confirm(`Generate bill for Meter #${meterId} (${consumer?.name || 'Unknown'}) for ${monthName} ${year}?`)) {
                return;
            }

            try {
                showLoading(true);
                const response = await fetch(`${BILL_API_URL}/GenerateBillForMeter`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ meterId, month, year }),
                });

                if (response.ok) {
                    const result = await response.json();

                    if (result.billsGenerated > 0) {
                        showSuccess(result.message);
                        await fetchBills();

                        // Clear the form
                        document.getElementById('singleMeter').value = '';
                    } else {
                        showError(result.message);
                    }
                } else {
                    const errorData = await response.json();
                    throw new Error(errorData.error || 'Failed to generate bill');
                }
            } catch (error) {
                console.error('Error generating bill for meter:', error);
                showError(error.message || 'Failed to generate bill for meter');
            } finally {
                showLoading(false);
            }
        }

        function prepareAddBill() {
            document.getElementById('billModalLabel').textContent = 'Add Monthly Bill';
            document.getElementById('billForm').reset();
            document.getElementById('isEdit').value = 'false';
            document.getElementById('billId').value = '0';

            const currentDate = new Date();
            document.getElementById('billingMonth').value = currentDate.getMonth() + 1;
            document.getElementById('billingYear').value = currentDate.getFullYear();
            document.getElementById('billingDate').value = currentDate.toISOString().split('T')[0];
        }

        async function editBill(billId) {
            const bill = allBills.find(b => b.billId === billId);
            if (!bill) {
                showError('Bill not found');
                return;
            }

            document.getElementById('billModalLabel').textContent = 'Edit Monthly Bill';
            document.getElementById('isEdit').value = 'true';
            document.getElementById('billId').value = bill.billId;
            document.getElementById('consumerId').value = bill.consumerId;
            document.getElementById('meterId').value = bill.meterId;
            document.getElementById('billingDate').value = bill.billingDate;
            document.getElementById('billingMonth').value = bill.billingMonth;
            document.getElementById('billingYear').value = bill.billingYear;
            document.getElementById('totalConsumptionKwh').value = bill.totalConsumptionKwh;
            document.getElementById('totalAmount').value = bill.totalAmount;
            document.getElementById('billStatus').value = bill.billStatus;

            billModal.show();
        }

        function calculateEstimatedAmount() {
            const consumption = parseFloat(document.getElementById('totalConsumptionKwh').value) || 0;
            const baseRate = 7.5;

            if (consumption > 0) {
                const estimatedAmount = consumption * baseRate;
                document.getElementById('totalAmount').value = estimatedAmount.toFixed(2);
                document.getElementById('amountInfo').textContent = `Estimated based on ₹${baseRate} per kWh`;
            }
        }

         async function saveBill() {
            const isEdit = document.getElementById('isEdit').value === 'true';
            const billId = parseInt(document.getElementById('billId').value);
            const consumerId = parseInt(document.getElementById('consumerId').value);
            const meterId = parseInt(document.getElementById('meterId').value);
            const billingDate = document.getElementById('billingDate').value;
            const billingMonth = parseInt(document.getElementById('billingMonth').value);
            const billingYear = parseInt(document.getElementById('billingYear').value);
            const totalConsumptionKwh = parseFloat(document.getElementById('totalConsumptionKwh').value);
            const totalAmount = parseFloat(document.getElementById('totalAmount').value);
            const billStatus = document.getElementById('billStatus').value;

            if (!consumerId || !meterId || !billingDate || !billingMonth || !billingYear || !totalConsumptionKwh || !totalAmount || !billStatus) {
                showError('Please fill all required fields');
                return;
            }

            if (totalConsumptionKwh < 0 || totalAmount < 0) {
                showError('Consumption and amount must be positive values');
                return;
            }

            const billData = {
                billId: isEdit ? billId : null,
                consumerId: consumerId,
                meterId: meterId,
                billingDate: billingDate,
                billingMonth: billingMonth,
                billingYear: billingYear,
                totalConsumptionKwh: totalConsumptionKwh,
                totalAmount: totalAmount,
                billStatus: billStatus
            };

            const endpoint = isEdit ? `${BILL_API_URL}/Update` : `${BILL_API_URL}/Create`;
            const method = isEdit ? 'PUT' : 'POST';

            try {
                showLoading(true);
                const response = await fetch(endpoint, {
                    method: method,
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(billData),
                });

                if (response.ok) {
                    billModal.hide();
                    showSuccess(isEdit ? 'Bill updated successfully!' : 'Bill created successfully!');
                    await fetchBills();
                } else {
                    const errorData = await response.json();
                    throw new Error(errorData.error || 'Failed to save bill');
                }
            } catch (error) {
                console.error('Error saving bill:', error);
                showError('Failed to save bill: ' + error.message);
            } finally {
                showLoading(false);
            }
        }

        async function deleteBill(billId) {
            if (!confirm('Are you sure you want to delete this bill?')) {
                return;
            }

            try {
                showLoading(true);
                const response = await fetch(`${BILL_API_URL}/${billId}`, {
                    method: 'DELETE',
                });

                if (response.ok) {
                    showSuccess('Bill deleted successfully!');
                    await fetchBills();
                } else {
                    const errorText = await response.text();
                    throw new Error(errorText);
                }
            } catch (error) {
                console.error('Error deleting bill:', error);
                showError('Failed to delete bill: ' + error.message);
            } finally {
                showLoading(false);
            }
        }

